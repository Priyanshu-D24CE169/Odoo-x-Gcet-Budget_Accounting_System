@page
@using Budget_Accounting_System.Models
@model Budget_Accounting_System.Areas.Portal.Pages.DashboardModel
@{
    ViewData["Title"] = "My Dashboard";
}


<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h1 class="display-6">
                    <i class="bi bi-person-circle text-success"></i> Welcome, @Model.ContactInfo?.Name
                </h1>
                <p class="text-muted">
                    @Model.ContactInfo?.Type Portal | @Model.ContactInfo?.Email
                </p>
            </div>
            <div class="text-end">
                <p class="mb-0"><strong>Today:</strong> @DateTime.Now.ToString("dddd, MMMM dd, yyyy")</p>
                <p class="mb-0"><strong>Last Login:</strong> @Model.CurrentUser?.LastLoginDate?.ToString("g")</p>
            </div>
        </div>
    </div>
</div>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-warning">
        <i class="bi bi-exclamation-triangle"></i> @TempData["ErrorMessage"]
    </div>
}

<!-- Statistics Cards -->
<div class="row g-3 mb-4">
    @if (Model.ContactInfo?.Type == ContactType.Customer || Model.ContactInfo?.Type == ContactType.Both)
    {
        <div class="col-md-6">
            <div class="card border-primary shadow-sm h-100">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-receipt"></i> My Invoices</h5>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-6 border-end">
                            <h3 class="mb-0">@Model.MyInvoices.Count</h3>
                            <p class="text-muted mb-0">Total Invoices</p>
                        </div>
                        <div class="col-6">
                            <h3 class="mb-0">@Model.TotalInvoicesAmount.ToString("C")</h3>
                            <p class="text-muted mb-0">Total Amount</p>
                        </div>
                    </div>
                    <hr />
                    <div class="d-flex justify-content-between align-items-center">
                        <span class="text-danger fw-bold">Amount Due:</span>
                        <strong class="text-danger">@Model.UnpaidInvoices.ToString("C")</strong>
                    </div>
                </div>
            </div>
        </div>
    }

    @if (Model.ContactInfo?.Type == ContactType.Vendor || Model.ContactInfo?.Type == ContactType.Both)
    {
        <div class="col-md-6">
            <div class="card border-success shadow-sm h-100">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="bi bi-file-earmark-text"></i> My Bills</h5>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-6 border-end">
                            <h3 class="mb-0">@Model.MyBills.Count</h3>
                            <p class="text-muted mb-0">Total Bills</p>
                        </div>
                        <div class="col-6">
                            <h3 class="mb-0">@Model.TotalBillsAmount.ToString("C")</h3>
                            <p class="text-muted mb-0">Total Amount</p>
                        </div>
                    </div>
                    <hr />
                    <div class="d-flex justify-content-between align-items-center">
                        <span class="text-warning fw-bold">Amount Due:</span>
                        <strong class="text-warning">@Model.UnpaidBills.ToString("C")</strong>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<!-- Recent Invoices -->
@if (Model.MyInvoices.Any())
{
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0"><i class="bi bi-receipt"></i> Recent Invoices</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Invoice No.</th>
                            <th>Date</th>
                            <th>Amount</th>
                            <th>Paid</th>
                            <th>Balance</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var invoice in Model.MyInvoices)
                        {
                            var balance = invoice.TotalAmount - invoice.PaidAmount;
                            <tr>
                                <td><strong>@invoice.InvoiceNumber</strong></td>
                                <td>@invoice.InvoiceDate.ToString("dd/MM/yyyy")</td>
                                <td>@invoice.TotalAmount.ToString("C")</td>
                                <td>@invoice.PaidAmount.ToString("C")</td>
                                <td>
                                    <strong class="@(balance > 0 ? "text-danger" : "text-success")">
                                        @balance.ToString("C")
                                    </strong>
                                </td>
                                <td>
                                    @if (balance == 0)
                                    {
                                        <span class="badge bg-success">Paid</span>
                                    }
                                    else if (invoice.PaidAmount > 0)
                                    {
                                        <span class="badge bg-warning">Partial</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Unpaid</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}

<!-- Recent Bills -->
@if (Model.MyBills.Any())
{
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0"><i class="bi bi-file-earmark-text"></i> Recent Bills</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Bill No.</th>
                            <th>Date</th>
                            <th>Amount</th>
                            <th>Paid</th>
                            <th>Balance</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var bill in Model.MyBills)
                        {
                            var balance = bill.TotalAmount - bill.PaidAmount;
                            <tr>
                                <td><strong>@bill.BillNumber</strong></td>
                                <td>@bill.BillDate.ToString("dd/MM/yyyy")</td>
                                <td>@bill.TotalAmount.ToString("C")</td>
                                <td>@bill.PaidAmount.ToString("C")</td>
                                <td>
                                    <strong class="@(balance > 0 ? "text-warning" : "text-success")">
                                        @balance.ToString("C")
                                    </strong>
                                </td>
                                <td>
                                    @if (balance == 0)
                                    {
                                        <span class="badge bg-success">Paid</span>
                                    }
                                    else if (bill.PaidAmount > 0)
                                    {
                                        <span class="badge bg-warning">Partial</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Unpaid</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}

@if (!Model.MyInvoices.Any() && !Model.MyBills.Any())
{
    <div class="alert alert-info">
        <h5><i class="bi bi-info-circle"></i> No Data Yet</h5>
        <p class="mb-0">You don't have any invoices or bills at the moment.</p>
    </div>
}
