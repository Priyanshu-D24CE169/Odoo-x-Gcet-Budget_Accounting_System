@model UsersListViewModel
@{
    ViewData["Title"] = "Users";
}

<h1 class="mb-4">User Administration</h1>

@if (TempData["SuccessMessage"] is string message)
{
    <div class="alert alert-success" role="alert">@message</div>
}

<form method="get" asp-action="UsersList" class="row g-2 align-items-center mb-3">
    <div class="col-md-6">
        <input type="text" name="search" value="@Model.Search" class="form-control" placeholder="Search by username or email" />
    </div>
    <div class="col-md-6 d-flex gap-2">
        <button type="submit" class="btn btn-outline-primary">Search</button>
        <a asp-action="CreateUser" class="btn btn-primary">Create User</a>
    </div>
</form>

<div class="table-responsive">
    <table class="table table-striped align-middle">
        <thead class="table-dark">
            <tr>
                <th>Username</th>
                <th>Email</th>
                <th>Role</th>
                <th>Status</th>
                <th>Last Login</th>
                <th>Failed Attempts</th>
                <th>Lockout</th>
                <th class="text-end">Actions</th>
            </tr>
        </thead>
        <tbody>
        @if (!Model.Users.Any())
        {
            <tr>
                <td colspan="8" class="text-center">No users found.</td>
            </tr>
        }
        else
        {
            foreach (var user in Model.Users)
            {
                <tr>
                    <td>@user.Username</td>
                    <td>@user.Email</td>
                    <td>@user.Role</td>
                    <td>
                        @if (user.IsActive)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Disabled</span>
                        }
                    </td>
                    <td>@(user.LastLoginAt?.ToString("yyyy-MM-dd HH:mm") ?? "Never")</td>
                    <td>@user.FailedLoginAttempts</td>
                    <td>
                        @if (user.IsLockedOut)
                        {
                            <span class="badge bg-danger">Locked until @user.LockoutEnd?.ToString("g")</span>
                        }
                        else
                        {
                            <span class="badge bg-success">Unlocked</span>
                        }
                    </td>
                    <td class="text-end">
                        <a asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-sm btn-outline-primary">Edit</a>

                        <form asp-action="Unlock" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@user.Id" />
                            <button type="submit" class="btn btn-sm btn-outline-warning" @(user.IsLockedOut ? string.Empty : "disabled")>Unlock</button>
                        </form>

                        <form asp-action="DeleteUser" method="post" class="d-inline" onsubmit="return confirm('Disable this user?');">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@user.Id" />
                            <button type="submit" class="btn btn-sm btn-outline-danger">Disable</button>
                        </form>
                    </td>
                </tr>
            }
        }
        </tbody>
    </table>
</div>

@if (Model.TotalPages > 1)
{
    <nav aria-label="User pagination">
        <ul class="pagination">
            @for (var i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.PageNumber ? "active" : string.Empty)">
                    <a class="page-link" asp-action="UsersList" asp-route-page="@i" asp-route-search="@Model.Search">@i</a>
                </li>
            }
        </ul>
    </nav>
}
