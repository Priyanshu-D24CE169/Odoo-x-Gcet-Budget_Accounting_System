@model AdminDashboardViewModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="row g-3">
    <div class="col-md-3">
        <div class="card text-center shadow-sm border-0">
            <div class="card-body">
                <h5 class="text-muted">Total Users</h5>
                <p class="display-6 fw-bold">@Model.TotalUsers</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center shadow-sm border-0">
            <div class="card-body">
                <h5 class="text-muted">Active</h5>
                <p class="display-6 fw-bold text-success">@Model.ActiveUsers</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center shadow-sm border-0">
            <div class="card-body">
                <h5 class="text-muted">Inactive</h5>
                <p class="display-6 fw-bold text-secondary">@Model.InactiveUsers</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center shadow-sm border-0">
            <div class="card-body">
                <h5 class="text-muted">Locked</h5>
                <p class="display-6 fw-bold text-danger">@Model.LockedUsers</p>
            </div>
        </div>
    </div>
</div>

<div class="mt-4 d-flex gap-2">
    <a asp-action="UsersList" class="btn btn-primary">Manage Users</a>
    <a asp-action="CreateUser" class="btn btn-outline-primary">Create User</a>
</div>
