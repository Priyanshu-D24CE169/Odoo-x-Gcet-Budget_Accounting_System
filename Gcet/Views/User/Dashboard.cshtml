@model UserDashboardViewModel
@{
    ViewData["Title"] = "User Dashboard";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-sm border-0">
            <div class="card-body">
                <h2 class="h4">Welcome, @Model.Username</h2>
                <p class="text-muted">Last login: @(Model.LastLoginAt?.ToString("f") ?? "First time here")</p>
                <div class="alert alert-info" role="alert">
                    Stay vigilant. If you notice any unusual activity, contact support immediately.
                </div>
                <a asp-controller="Account" asp-action="ChangePassword" class="btn btn-outline-primary">Change Password</a>
            </div>
        </div>
    </div>
</div>
