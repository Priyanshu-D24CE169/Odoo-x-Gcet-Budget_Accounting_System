@page
@model Budget_Accounting_System.Pages.CustomerInvoices.IndexModel
@{
    ViewData["Title"] = "Customer Invoices";
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col-md-8">
            <h2>Customer Invoices</h2>
        </div>
        <div class="col-md-4 text-end">
            <a asp-page="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> New
            </a>
        </div>
    </div>

    <!-- Search and Filter -->
    <div class="row mb-3">
        <div class="col-md-4">
            <form method="get">
                <div class="input-group">
                    <input type="text" name="searchString" class="form-control" placeholder="Search Invoice Number..." value="@Model.SearchString" />
                    <button class="btn btn-outline-secondary" type="submit">Search</button>
                </div>
            </form>
        </div>
        <div class="col-md-4">
            <form method="get">
                <select name="filterStatus" class="form-select" onchange="this.form.submit()">
                    <option value="">All Status</option>
                    <option value="Draft" selected="@(Model.FilterStatus == "Draft")">Draft</option>
                    <option value="Posted" selected="@(Model.FilterStatus == "Posted")">Posted</option>
                    <option value="Cancelled" selected="@(Model.FilterStatus == "Cancelled")">Cancelled</option>
                </select>
            </form>
        </div>
        <div class="col-md-4">
            <form method="get">
                <select name="filterPaymentStatus" class="form-select" onchange="this.form.submit()">
                    <option value="">All Payment Status</option>
                    <option value="Paid" selected="@(Model.FilterPaymentStatus == "Paid")">Paid</option>
                    <option value="Partial" selected="@(Model.FilterPaymentStatus == "Partial")">Partial</option>
                    <option value="NotPaid" selected="@(Model.FilterPaymentStatus == "NotPaid")">Not Paid</option>
                </select>
            </form>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Invoice No.</th>
                            <th>Invoice Date</th>
                            <th>Due Date</th>
                            <th>Customer</th>
                            <th>Reference</th>
                            <th>Total Amount</th>
                            <th>Amount Due</th>
                            <th>Status</th>
                            <th>Payment</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var invoice in Model.CustomerInvoices)
                        {
                            var amountDue = invoice.TotalAmount - invoice.PaidAmount;
                            var paymentStatus = amountDue == 0 ? "Paid" : 
                                               amountDue < invoice.TotalAmount ? "Partial" : "Not Paid";
                            
                            <tr>
                                <td><strong>@invoice.InvoiceNumber</strong></td>
                                <td>@invoice.InvoiceDate.ToString("dd/MM/yyyy")</td>
                                <td>@invoice.DueDate?.ToString("dd/MM/yyyy")</td>
                                <td>@invoice.Customer.Name</td>
                                <td>@invoice.Reference</td>
                                <td>@invoice.TotalAmount.ToString("C")</td>
                                <td>
                                    <strong class="@(amountDue > 0 ? "text-danger" : "text-success")">
                                        @amountDue.ToString("C")
                                    </strong>
                                </td>
                                <td>
                                    @if (invoice.Status == InvoiceStatus.Draft)
                                    {
                                        <span class="badge bg-secondary">Draft</span>
                                    }
                                    else if (invoice.Status == InvoiceStatus.Posted)
                                    {
                                        <span class="badge bg-success">Posted</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Cancelled</span>
                                    }
                                </td>
                                <td>
                                    @if (paymentStatus == "Paid")
                                    {
                                        <span class="badge bg-success">Paid</span>
                                    }
                                    else if (paymentStatus == "Partial")
                                    {
                                        <span class="badge bg-warning">Partial</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Not Paid</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-page="Details" asp-route-id="@invoice.Id" class="btn btn-sm btn-info">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        @if (invoice.Status == InvoiceStatus.Draft)
                                        {
                                            <a asp-page="Edit" asp-route-id="@invoice.Id" class="btn btn-sm btn-warning">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                        }
                                        @if (invoice.Status == InvoiceStatus.Posted && amountDue > 0)
                                        {
                                            <a asp-page="Receive" asp-route-id="@invoice.Id" class="btn btn-sm btn-success" title="Record Payment">
                                                <i class="bi bi-cash"></i>
                                            </a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (!Model.CustomerInvoices.Any())
            {
                <div class="text-center text-muted py-5">
                    <h5>No customer invoices found</h5>
                    <p>Click "New" to create your first invoice.</p>
                </div>
            }
        </div>
    </div>
</div>
