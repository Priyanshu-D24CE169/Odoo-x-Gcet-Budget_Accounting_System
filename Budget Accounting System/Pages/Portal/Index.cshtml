@page
@model Budget_Accounting_System.Pages.Portal.IndexModel
@{
    ViewData["Title"] = "My Portal";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="display-6">
                        <i class="bi bi-person-circle text-primary"></i> Welcome, @Model.ContactInfo?.Name
                    </h1>
                    <p class="text-muted">
                        @Model.ContactInfo?.Type Portal | @Model.ContactInfo?.Email
                    </p>
                </div>
                <div>
                    <form asp-page="/Account/Logout" method="post">
                        <button type="submit" class="btn btn-outline-danger">
                            <i class="bi bi-box-arrow-right"></i> Logout
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row g-3 mb-4">
        @if (Model.ContactInfo?.Type == ContactType.Customer || Model.ContactInfo?.Type == ContactType.Both)
        {
            <div class="col-md-6">
                <div class="card border-primary shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">
                            <i class="bi bi-receipt text-primary"></i> My Invoices
                        </h5>
                        <div class="row">
                            <div class="col-6">
                                <p class="text-muted mb-1">Total Invoices</p>
                                <h3 class="mb-0">@Model.MyInvoices.Count</h3>
                            </div>
                            <div class="col-6">
                                <p class="text-muted mb-1">Total Amount</p>
                                <h3 class="mb-0">@Model.TotalInvoicesAmount.ToString("C")</h3>
                            </div>
                        </div>
                        <hr />
                        <div class="d-flex justify-content-between">
                            <span class="text-danger">Unpaid:</span>
                            <strong class="text-danger">@Model.UnpaidInvoices.ToString("C")</strong>
                        </div>
                    </div>
                </div>
            </div>
        }

        @if (Model.ContactInfo?.Type == ContactType.Vendor || Model.ContactInfo?.Type == ContactType.Both)
        {
            <div class="col-md-6">
                <div class="card border-success shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">
                            <i class="bi bi-file-earmark-text text-success"></i> My Bills
                        </h5>
                        <div class="row">
                            <div class="col-6">
                                <p class="text-muted mb-1">Total Bills</p>
                                <h3 class="mb-0">@Model.MyBills.Count</h3>
                            </div>
                            <div class="col-6">
                                <p class="text-muted mb-1">Total Amount</p>
                                <h3 class="mb-0">@Model.TotalBillsAmount.ToString("C")</h3>
                            </div>
                        </div>
                        <hr />
                        <div class="d-flex justify-content-between">
                            <span class="text-warning">Unpaid:</span>
                            <strong class="text-warning">@Model.UnpaidBills.ToString("C")</strong>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Recent Invoices -->
    @if (Model.MyInvoices.Any())
    {
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="bi bi-receipt"></i> Recent Invoices
                </h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Invoice No.</th>
                                <th>Date</th>
                                <th>Due Date</th>
                                <th>Amount</th>
                                <th>Paid</th>
                                <th>Balance</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var invoice in Model.MyInvoices)
                            {
                                var balance = invoice.TotalAmount - invoice.PaidAmount;
                                <tr>
                                    <td><strong>@invoice.InvoiceNumber</strong></td>
                                    <td>@invoice.InvoiceDate.ToString("dd/MM/yyyy")</td>
                                    <td>@invoice.DueDate?.ToString("dd/MM/yyyy")</td>
                                    <td>@invoice.TotalAmount.ToString("C")</td>
                                    <td>@invoice.PaidAmount.ToString("C")</td>
                                    <td>
                                        <strong class="@(balance > 0 ? "text-danger" : "text-success")">
                                            @balance.ToString("C")
                                        </strong>
                                    </td>
                                    <td>
                                        @if (balance == 0)
                                        {
                                            <span class="badge bg-success">Paid</span>
                                        }
                                        else if (invoice.PaidAmount > 0)
                                        {
                                            <span class="badge bg-warning">Partial</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Unpaid</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <a asp-page="ViewInvoice" asp-route-id="@invoice.Id" class="btn btn-outline-primary">
                                                <i class="bi bi-eye"></i> View
                                            </a>
                                            <a asp-page="DownloadInvoice" asp-route-id="@invoice.Id" class="btn btn-outline-secondary">
                                                <i class="bi bi-download"></i> Download
                                            </a>
                                            @if (balance > 0)
                                            {
                                                <a asp-page="PayInvoice" asp-route-id="@invoice.Id" class="btn btn-outline-success">
                                                    <i class="bi bi-credit-card"></i> Pay
                                                </a>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }

    <!-- Recent Bills -->
    @if (Model.MyBills.Any())
    {
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="bi bi-file-earmark-text"></i> Recent Bills
                </h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Bill No.</th>
                                <th>Date</th>
                                <th>Due Date</th>
                                <th>Amount</th>
                                <th>Paid</th>
                                <th>Balance</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var bill in Model.MyBills)
                            {
                                var balance = bill.TotalAmount - bill.PaidAmount;
                                <tr>
                                    <td><strong>@bill.BillNumber</strong></td>
                                    <td>@bill.BillDate.ToString("dd/MM/yyyy")</td>
                                    <td>@bill.DueDate?.ToString("dd/MM/yyyy")</td>
                                    <td>@bill.TotalAmount.ToString("C")</td>
                                    <td>@bill.PaidAmount.ToString("C")</td>
                                    <td>
                                        <strong class="@(balance > 0 ? "text-warning" : "text-success")">
                                            @balance.ToString("C")
                                        </strong>
                                    </td>
                                    <td>
                                        @if (balance == 0)
                                        {
                                            <span class="badge bg-success">Paid</span>
                                        }
                                        else if (bill.PaidAmount > 0)
                                        {
                                            <span class="badge bg-warning">Partial</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Unpaid</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <a asp-page="ViewBill" asp-route-id="@bill.Id" class="btn btn-outline-primary">
                                                <i class="bi bi-eye"></i> View
                                            </a>
                                            <a asp-page="DownloadBill" asp-route-id="@bill.Id" class="btn btn-outline-secondary">
                                                <i class="bi bi-download"></i> Download
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>
