@page
@model Budget_Accounting_System.Pages.PurchaseOrders.DetailsModel
@{
    ViewData["Title"] = "PO Details";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">Purchase Order - @Model.PurchaseOrder.PONumber</h4>
                    <div>
                        @if (Model.PurchaseOrder.Status == POStatus.Draft)
                        {
                            <span class="badge bg-secondary me-2">Draft</span>
                        }
                        else if (Model.PurchaseOrder.Status == POStatus.Confirmed)
                        {
                            <span class="badge bg-success me-2">Confirmed</span>
                        }
                        else
                        {
                            <span class="badge bg-danger me-2">Cancelled</span>
                        }
                        <a asp-page="Index" class="btn btn-sm btn-outline-secondary">Back</a>
                        <a asp-page="Index" class="btn btn-sm btn-outline-secondary">Home</a>
                    </div>
                </div>
                <div class="card-body">
                    <!-- Header Info -->
                    <div class="row mb-4">
                        <div class="col-md-3">
                            <dl>
                                <dt>PO No.</dt>
                                <dd><strong>@Model.PurchaseOrder.PONumber</strong></dd>
                            </dl>
                        </div>
                        <div class="col-md-3">
                            <dl>
                                <dt>PO Date</dt>
                                <dd>@Model.PurchaseOrder.PODate.ToString("dd/MM/yyyy")</dd>
                            </dl>
                        </div>
                        <div class="col-md-4">
                            <dl>
                                <dt>Vendor Name</dt>
                                <dd>
                                    <a asp-page="/Contacts/Details" asp-route-id="@Model.PurchaseOrder.VendorId">
                                        @Model.PurchaseOrder.Vendor.Name
                                    </a>
                                </dd>
                            </dl>
                        </div>
                        <div class="col-md-2">
                            <dl>
                                <dt>Reference</dt>
                                <dd>@Model.PurchaseOrder.Reference</dd>
                            </dl>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="mb-3">
                        @if (Model.PurchaseOrder.Status == POStatus.Draft)
                        {
                            <form method="post" asp-page-handler="Confirm" asp-route-id="@Model.PurchaseOrder.Id" style="display:inline;">
                                <button type="submit" class="btn btn-success">
                                    <i class="bi bi-check-circle"></i> Confirm
                                </button>
                            </form>
                            <a asp-page="Edit" asp-route-id="@Model.PurchaseOrder.Id" class="btn btn-warning">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                        }
                        <button type="button" class="btn btn-outline-secondary" onclick="window.print()">
                            <i class="bi bi-printer"></i> Print
                        </button>
                        @if (Model.PurchaseOrder.Status == POStatus.Confirmed)
                        {
                            <a asp-page="/VendorBills/CreateFromPO" asp-route-poId="@Model.PurchaseOrder.Id" class="btn btn-primary">
                                <i class="bi bi-receipt"></i> Create Bill
                            </a>
                            
                            @if (Model.PurchaseOrder.VendorBills.Any())
                            {
                                <button type="button" class="btn btn-outline-info" data-bs-toggle="modal" data-bs-target="#billsModal">
                                    <i class="bi bi-receipt-cutoff"></i> Fetch Vendor Bills (@Model.PurchaseOrder.VendorBills.Count)
                                </button>
                            }
                        }
                    </div>

                    <!-- Line Items -->
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead class="table-light">
                                <tr>
                                    <th>Sr. No.</th>
                                    <th>Product</th>
                                    <th>Budget Analytics</th>
                                    <th>Qty</th>
                                    <th>Unit Price</th>
                                    <th>Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{int srNo = 1;}
                                @foreach (var line in Model.PurchaseOrder.Lines)
                                {
                                    <tr class="@(Model.BudgetWarnings.ContainsKey(line.Id) ? "table-warning" : "")">
                                        <td>@srNo</td>
                                        <td>@line.Product.Name</td>
                                        <td>
                                            @if (line.AnalyticalAccount != null)
                                            {
                                                <span>@line.AnalyticalAccount.Code - @line.AnalyticalAccount.Name</span>
                                                @if (Model.BudgetWarnings.ContainsKey(line.Id))
                                                {
                                                    <div class="text-warning mt-1">
                                                        <i class="bi bi-exclamation-triangle"></i>
                                                        <small>@Model.BudgetWarnings[line.Id]</small>
                                                    </div>
                                                }
                                            }
                                            else
                                            {
                                                <span class="text-muted">Not assigned</span>
                                            }
                                        </td>
                                        <td>@line.Quantity</td>
                                        <td>@line.UnitPrice.ToString("C")</td>
                                        <td>@line.LineTotal.ToString("C")</td>
                                    </tr>
                                    srNo++;
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <td colspan="5" class="text-end"><strong>Total</strong></td>
                                    <td><strong>@Model.PurchaseOrder.TotalAmount.ToString("C")</strong></td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>

                    @if (Model.BudgetWarnings.Any())
                    {
                        <div class="alert alert-warning mt-3">
                            <h5><i class="bi bi-exclamation-triangle"></i> Exceeds Approved Budget</h5>
                            <p>Some line items exceed the approved budget. Orange-highlighted lines indicate budget overruns.</p>
                            <p><strong>Non Blocking Warning:</strong> This PO can still be confirmed, but review is recommended.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Vendor Bills Modal -->
<div class="modal fade" id="billsModal" tabindex="-1">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Vendor Bills - @Model.PurchaseOrder.PONumber</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Bill Number</th>
                            <th>Bill Date</th>
                            <th>Amount</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var bill in Model.PurchaseOrder.VendorBills)
                        {
                            <tr>
                                <td>@bill.BillNumber</td>
                                <td>@bill.BillDate.ToString("dd/MM/yyyy")</td>
                                <td>@bill.TotalAmount.ToString("C")</td>
                                <td>
                                    @if (bill.Status == BillStatus.Draft)
                                    {
                                        <span class="badge bg-secondary">Draft</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">Posted</span>
                                    }
                                </td>
                                <td>
                                    <a asp-page="/VendorBills/Details" asp-route-id="@bill.Id" class="btn btn-sm btn-info">View</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
