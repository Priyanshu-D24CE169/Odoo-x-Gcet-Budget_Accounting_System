@page
@model Budget_Accounting_System.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Sign Up";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Shiv Furniture</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #11998e 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }
        .register-container {
            background: white;
            border-radius: 20px;
            box-shadow: 0 20px 60px rgba(0,0,0,0.3);
            overflow: hidden;
            max-width: 1000px;
            width: 100%;
        }
        .register-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 40px;
            text-align: center;
        }
        .register-body {
            padding: 40px;
        }
        .role-selector {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 15px;
            margin-bottom: 20px;
        }
        .role-option {
            border: 2px solid #e0e0e0;
            border-radius: 10px;
            padding: 20px;
            text-align: center;
            cursor: pointer;
            transition: all 0.3s;
        }
        .role-option:hover {
            border-color: #667eea;
            background: #f8f9ff;
        }
        .role-option input[type="radio"] {
            display: none;
        }
        .role-option input[type="radio"]:checked + label {
            color: #667eea;
            font-weight: bold;
        }
        .role-option input[type="radio"]:checked ~ .role-icon {
            color: #667eea;
        }
        .role-icon {
            font-size: 3rem;
            color: #999;
            transition: color 0.3s;
        }
        .btn-register {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            padding: 12px;
            font-size: 1.1rem;
            font-weight: 600;
        }
        .btn-register:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 20px rgba(102, 126, 234, 0.4);
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="register-container">
                    <div class="row g-0">
                        <!-- Left Side - Branding -->
                        <div class="col-md-4 register-header d-flex flex-column justify-content-center">
                            <div>
                                <i class="bi bi-person-plus-fill display-1 mb-3"></i>
                                <h2 class="fw-bold mb-3">Create Account</h2>
                                <h5 class="mb-4">Join Shiv Furniture System</h5>
                                
                                <div class="mt-4 text-start">
                                    <p class="small opacity-75 mb-2">
                                        <i class="bi bi-check-circle"></i> Secure authentication
                                    </p>
                                    <p class="small opacity-75 mb-2">
                                        <i class="bi bi-check-circle"></i> Role-based access
                                    </p>
                                    <p class="small opacity-75">
                                        <i class="bi bi-check-circle"></i> Instant portal access
                                    </p>
                                </div>
                            </div>
                        </div>

                        <!-- Right Side - Registration Form -->
                        <div class="col-md-8 register-body">
                            <h3 class="mb-4 text-center">Sign Up</h3>

                            <form method="post">
                                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                                <!-- Role Selection -->
                                <div class="mb-4">
                                    <label class="form-label fw-semibold">Select Your Role *</label>
                                    <div class="role-selector">
                                        <div class="role-option">
                                            <input type="radio" asp-for="Input.Role" value="Admin" id="roleAdmin" />
                                            <label for="roleAdmin" class="w-100">
                                                <div class="role-icon"><i class="bi bi-shield-lock-fill"></i></div>
                                                <div class="mt-2">
                                                    <strong>Admin</strong>
                                                    <p class="small text-muted mb-0">Full system access</p>
                                                </div>
                                            </label>
                                        </div>
                                        <div class="role-option">
                                            <input type="radio" asp-for="Input.Role" value="PortalUser" id="rolePortal" />
                                            <label for="rolePortal" class="w-100">
                                                <div class="role-icon"><i class="bi bi-person-circle"></i></div>
                                                <div class="mt-2">
                                                    <strong>Portal User</strong>
                                                    <p class="small text-muted mb-0">Customer/Vendor portal</p>
                                                </div>
                                            </label>
                                        </div>
                                    </div>
                                    <span asp-validation-for="Input.Role" class="text-danger small"></span>
                                </div>

                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="Input.FirstName" class="form-label fw-semibold">
                                            <i class="bi bi-person text-primary"></i> First Name *
                                        </label>
                                        <input asp-for="Input.FirstName" class="form-control" placeholder="John" />
                                        <span asp-validation-for="Input.FirstName" class="text-danger small"></span>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="Input.LastName" class="form-label fw-semibold">
                                            <i class="bi bi-person text-primary"></i> Last Name *
                                        </label>
                                        <input asp-for="Input.LastName" class="form-control" placeholder="Doe" />
                                        <span asp-validation-for="Input.LastName" class="text-danger small"></span>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Input.LoginId" class="form-label fw-semibold">
                                        <i class="bi bi-person-badge text-primary"></i> Login ID *
                                    </label>
                                    <input asp-for="Input.LoginId" class="form-control" 
                                           placeholder="6-12 characters (e.g., johndoe123)" autocomplete="username" />
                                    <span asp-validation-for="Input.LoginId" class="text-danger small"></span>
                                    <small class="text-muted">This will be your username to login</small>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Input.Email" class="form-label fw-semibold">
                                        <i class="bi bi-envelope text-primary"></i> Email Address *
                                    </label>
                                    <input asp-for="Input.Email" class="form-control" 
                                           placeholder="john.doe@example.com" autocomplete="email" />
                                    <span asp-validation-for="Input.Email" class="text-danger small"></span>
                                </div>

                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="Input.Password" class="form-label fw-semibold">
                                            <i class="bi bi-key-fill text-primary"></i> Password *
                                        </label>
                                        <input asp-for="Input.Password" class="form-control" 
                                               type="password" autocomplete="new-password" />
                                        <span asp-validation-for="Input.Password" class="text-danger small"></span>
                                        <small class="text-muted">Min 8 chars, uppercase, lowercase, special char</small>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="Input.ConfirmPassword" class="form-label fw-semibold">
                                            <i class="bi bi-key-fill text-primary"></i> Confirm Password *
                                        </label>
                                        <input asp-for="Input.ConfirmPassword" class="form-control" 
                                               type="password" autocomplete="new-password" />
                                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                                    </div>
                                </div>

                                @if (Model.AvailableContacts.Any())
                                {
                                    <div class="mb-3">
                                        <label asp-for="Input.ContactId" class="form-label fw-semibold">
                                            <i class="bi bi-link text-primary"></i> Link to Contact (Optional)
                                        </label>
                                        <select asp-for="Input.ContactId" class="form-select">
                                            <option value="">-- None --</option>
                                            @foreach (var contact in Model.AvailableContacts)
                                            {
                                                <option value="@contact.Id">@contact.Name (@contact.Type)</option>
                                            }
                                        </select>
                                        <small class="text-muted">For portal users: link to your customer/vendor profile</small>
                                    </div>
                                }

                                <div class="d-grid mb-3">
                                    <button type="submit" class="btn btn-primary btn-register">
                                        <i class="bi bi-person-plus-fill"></i> Create Account
                                    </button>
                                </div>

                                <hr class="my-4" />

                                <div class="text-center">
                                    <p class="mb-0">
                                        Already have an account? 
                                        <a asp-page="Login" class="fw-bold text-decoration-none">Sign In</a>
                                    </p>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

                <div class="text-center mt-3">
                    <p class="text-white mb-0">
                        <small><i class="bi bi-shield-lock"></i> Your data is secure and encrypted</small>
                    </p>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script>
        // Role selection visual feedback
        document.querySelectorAll('.role-option').forEach(option => {
            option.addEventListener('click', function() {
                const radio = this.querySelector('input[type="radio"]');
                radio.checked = true;
                
                // Remove active class from all
                document.querySelectorAll('.role-option').forEach(opt => {
                    opt.style.borderColor = '#e0e0e0';
                    opt.style.background = 'white';
                });
                
                // Add active class to selected
                this.style.borderColor = '#667eea';
                this.style.background = '#f8f9ff';
            });
        });
    </script>
</body>
</html>
