@page
@model Budget_Accounting_System.Pages.Budgets.DetailsModel
@{
    ViewData["Title"] = Model.Budget.DisplayName;
}

<div class="row mb-3">
    <div class="col-12">
        <h2 class="fw-bold">
            <i class="bi bi-piggy-bank-fill text-primary"></i> @Model.Budget.DisplayName
        </h2>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-page="/Index">Dashboard</a></li>
                <li class="breadcrumb-item"><a asp-page="./Index">Budgets</a></li>
                <li class="breadcrumb-item active">@Model.Budget.Name</li>
            </ol>
        </nav>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        <i class="bi bi-check-circle-fill"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show">
        <i class="bi bi-exclamation-triangle-fill"></i> @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Revision Links -->
@if (Model.Budget.IsRevision)
{
    <div class="alert alert-info">
        <i class="bi bi-info-circle-fill"></i>
        <strong>This is a revision of:</strong>
        <a asp-page="./Details" asp-route-id="@Model.Budget.RevisedFromId" class="alert-link">
            Original Budget (Created @Model.Budget.RevisedFrom?.CreatedDate.ToString("dd MMM yyyy"))
        </a>
    </div>
}

@if (Model.Budget.HasRevision)
{
    <div class="alert alert-warning">
        <i class="bi bi-arrow-repeat"></i>
        <strong>This budget has been revised:</strong>
        <a asp-page="./Details" asp-route-id="@Model.Budget.RevisedWithId" class="alert-link">
            @Model.Budget.RevisedWith?.DisplayName
        </a>
    </div>
}

<div class="card shadow-sm mb-4">
    <div class="card-header @Model.Budget.GetStateBadgeClass() text-white">
        <div class="d-flex justify-content-between align-items-center">
            <h5 class="mb-0">
                <i class="@Model.Budget.GetStateIcon()"></i> Budget Details
            </h5>
            <span class="badge bg-white text-dark fs-6">@Model.Budget.State</span>
        </div>
    </div>
    <div class="card-body">
        <div class="row mb-3">
            <div class="col-md-3">
                <label class="text-muted small">Budget Name</label>
                <div class="fw-bold">@Model.Budget.Name</div>
            </div>
            <div class="col-md-3">
                <label class="text-muted small">Period</label>
                <div class="fw-bold">
                    @Model.Budget.StartDate.ToString("dd MMM yyyy") - @Model.Budget.EndDate.ToString("dd MMM yyyy")
                </div>
                <small class="text-muted">(@Model.Budget.TotalDays days)</small>
            </div>
            <div class="col-md-3">
                <label class="text-muted small">Created</label>
                <div>@Model.Budget.CreatedDate.ToString("dd MMM yyyy")</div>
                @if (!string.IsNullOrEmpty(Model.Budget.CreatedBy))
                {
                    <small class="text-muted">by @Model.Budget.CreatedBy</small>
                }
            </div>
            <div class="col-md-3">
                <label class="text-muted small">Progress</label>
                <div class="progress" style="height: 25px;">
                    <div class="progress-bar bg-info" style="width: @Model.Budget.ProgressPercentage%">
                        @Model.Budget.ProgressPercentage% (@Model.Budget.DaysElapsed / @Model.Budget.TotalDays days)
                    </div>
                </div>
            </div>
        </div>

        @if (Model.Budget.State == BudgetState.Confirmed)
        {
            <div class="row mb-3">
                <div class="col-md-12">
                    <label class="text-muted small">Confirmed</label>
                    <div>@Model.Budget.ConfirmedDate?.ToString("dd MMM yyyy hh:mm tt")</div>
                    @if (!string.IsNullOrEmpty(Model.Budget.ConfirmedBy))
                    {
                        <small class="text-muted">by @Model.Budget.ConfirmedBy</small>
                    }
                </div>
            </div>
        }

        @if (!string.IsNullOrEmpty(Model.Budget.Notes))
        {
            <div class="row">
                <div class="col-md-12">
                    <label class="text-muted small">Notes</label>
                    <div>@Model.Budget.Notes</div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Budget Summary -->
@if (Model.Budget.State == BudgetState.Confirmed || Model.Budget.State == BudgetState.Revised)
{
    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="card border-success">
                <div class="card-body">
                    <h6 class="text-muted">Budgeted Income</h6>
                    <h4 class="text-success mb-0">?@Model.Budget.TotalBudgetedIncome.ToString("N2")</h4>
                    @if (Model.Budget.State == BudgetState.Confirmed)
                    {
                        <small class="text-muted">Achieved: ?@Model.Budget.TotalAchievedIncome.ToString("N2")</small>
                    }
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-danger">
                <div class="card-body">
                    <h6 class="text-muted">Budgeted Expense</h6>
                    <h4 class="text-danger mb-0">?@Model.Budget.TotalBudgetedExpense.ToString("N2")</h4>
                    @if (Model.Budget.State == BudgetState.Confirmed)
                    {
                        <small class="text-muted">Achieved: ?@Model.Budget.TotalAchievedExpense.ToString("N2")</small>
                    }
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-primary">
                <div class="card-body">
                    <h6 class="text-muted">Net Budget</h6>
                    <h4 class="@(Model.Budget.TotalBudgetedNet >= 0 ? "text-success" : "text-danger") mb-0">
                        ?@Model.Budget.TotalBudgetedNet.ToString("N2")
                    </h4>
                    @if (Model.Budget.State == BudgetState.Confirmed)
                    {
                        <small class="text-muted">Actual: ?@Model.Budget.TotalAchievedNet.ToString("N2")</small>
                    }
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-info">
                <div class="card-body">
                    <h6 class="text-muted">Days Remaining</h6>
                    <h4 class="text-info mb-0">@Model.Budget.DaysRemaining days</h4>
                    <small class="text-muted">of @Model.Budget.TotalDays total days</small>
                </div>
            </div>
        </div>
    </div>
}

<!-- Budget Lines -->
<div class="card shadow-sm">
    <div class="card-header bg-light">
        <h5 class="mb-0"><i class="bi bi-list-check"></i> Budget Lines (@Model.Budget.Lines.Count)</h5>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th style="width: 50px;">#</th>
                        <th>Analytical Account</th>
                        <th style="width: 100px;">Type</th>
                        <th class="text-end" style="width: 150px;">Budgeted Amount</th>
                        @if (Model.Budget.State == BudgetState.Confirmed)
                        {
                            <th class="text-end" style="width: 150px;">Achieved</th>
                            <th style="width: 200px;">Progress</th>
                            <th class="text-end" style="width: 150px;">Variance</th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @{int srNo = 1;}
                    @foreach (var line in Model.Budget.Lines.OrderBy(l => l.Type).ThenBy(l => l.AnalyticalAccount.Code))
                    {
                        <tr>
                            <td class="text-center">@srNo</td>
                            <td>
                                <strong>@line.AnalyticalAccount.Code</strong> - @line.AnalyticalAccount.Name
                                @if (!string.IsNullOrEmpty(line.Description))
                                {
                                    <br /><small class="text-muted">@line.Description</small>
                                }
                            </td>
                            <td>
                                @if (line.Type == BudgetLineType.Income)
                                {
                                    <span class="badge bg-success">Income</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Expense</span>
                                }
                            </td>
                            <td class="text-end fw-bold">?@line.BudgetedAmount.ToString("N2")</td>
                            @if (Model.Budget.State == BudgetState.Confirmed)
                            {
                                <td class="text-end">?@line.AchievedAmount.ToString("N2")</td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="progress flex-grow-1 me-2" style="height: 20px;">
                                            <div class="progress-bar @line.GetVarianceBadgeClass()" 
                                                 style="width: @Math.Min(line.AchievedPercentage, 100)%">
                                                @line.AchievedPercentage.ToString("N1")%
                                            </div>
                                        </div>
                                    </div>
                                </td>
                                <td class="text-end">
                                    <span class="badge @line.GetVarianceBadgeClass()">
                                        @(line.VarianceAmount >= 0 ? "+" : "")@line.VarianceAmount.ToString("N2")
                                    </span>
                                </td>
                            }
                        </tr>
                        srNo++;
                    }
                </tbody>
                <tfoot class="table-secondary">
                    <tr class="fw-bold">
                        <td colspan="3" class="text-end">Total:</td>
                        <td class="text-end">?@Model.Budget.Lines.Sum(l => l.BudgetedAmount).ToString("N2")</td>
                        @if (Model.Budget.State == BudgetState.Confirmed)
                        {
                            <td class="text-end">?@Model.Budget.Lines.Sum(l => l.AchievedAmount).ToString("N2")</td>
                            <td colspan="2"></td>
                        }
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>

<!-- Action Buttons -->
<div class="row mt-4">
    <div class="col-12">
        <div class="d-flex justify-content-between">
            <a asp-page="./Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
            <div>
                @if (Model.Budget.CanEdit)
                {
                    <a asp-page="./Edit" asp-route-id="@Model.Budget.Id" class="btn btn-primary">
                        <i class="bi bi-pencil"></i> Edit
                    </a>
                }
                
                @if (Model.Budget.CanConfirm)
                {
                    <a asp-page="./Confirm" asp-route-id="@Model.Budget.Id" class="btn btn-success">
                        <i class="bi bi-check-circle-fill"></i> Confirm Budget
                    </a>
                }
                
                @if (Model.Budget.CanRevise)
                {
                    <a asp-page="./Revise" asp-route-id="@Model.Budget.Id" class="btn btn-warning">
                        <i class="bi bi-arrow-repeat"></i> Revise Budget
                    </a>
                }
                
                @if (Model.Budget.CanCancel)
                {
                    <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#cancelModal">
                        <i class="bi bi-x-circle"></i> Cancel Budget
                    </button>
                }
            </div>
        </div>
    </div>
</div>

<!-- Cancel Modal -->
@if (Model.Budget.CanCancel)
{
    <div class="modal fade" id="cancelModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title">Cancel Budget</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to cancel this budget?</p>
                    <p class="text-danger"><strong>This action cannot be undone.</strong></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No, Keep It</button>
                    <form method="post" asp-page-handler="Cancel" asp-route-id="@Model.Budget.Id" class="d-inline">
                        <button type="submit" class="btn btn-danger">Yes, Cancel Budget</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}

