@page
@model Budget_Accounting_System.Pages.Budgets.IndexModel
@{
    ViewData["Title"] = "Budgets";
}

<div class="row mb-3">
    <div class="col-md-8">
        <h2 class="fw-bold"><i class="bi bi-piggy-bank-fill text-primary"></i> Budgets</h2>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-page="/Index">Dashboard</a></li>
                <li class="breadcrumb-item active">Budgets</li>
            </ol>
        </nav>
    </div>
    <div class="col-md-4 text-end">
        <a asp-page="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle-fill"></i> Create New Budget
        </a>
    </div>
</div>

<!-- Filter by State -->
<div class="row mb-3">
    <div class="col-md-3">
        <form method="get">
            <select name="filterState" class="form-select" onchange="this.form.submit()">
                <option value="">All States</option>
                <option value="Draft" selected="@(Model.FilterState == "Draft")">Draft</option>
                <option value="Confirmed" selected="@(Model.FilterState == "Confirmed")">Confirmed</option>
                <option value="Revised" selected="@(Model.FilterState == "Revised")">Revised</option>
                <option value="Archived" selected="@(Model.FilterState == "Archived")">Archived</option>
                <option value="Cancelled" selected="@(Model.FilterState == "Cancelled")">Cancelled</option>
            </select>
        </form>
    </div>
    <div class="col-md-6">
        @if (!string.IsNullOrEmpty(Model.FilterState))
        {
            <a asp-page="Index" class="btn btn-outline-secondary">
                <i class="bi bi-x-circle"></i> Clear Filter
            </a>
        }
    </div>
    <div class="col-md-3 text-end">
        <div class="badge bg-primary fs-6">
            Total: @Model.Budgets.Count Budget(s)
        </div>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        <i class="bi bi-check-circle-fill"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card shadow-sm">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Budget Name</th>
                        <th>Period</th>
                        <th class="text-center">Lines</th>
                        <th class="text-end">Total Budgeted</th>
                        <th class="text-center">State</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Budgets.Any())
                    {
                        <tr>
                            <td colspan="6" class="text-center text-muted py-5">
                                <i class="bi bi-inbox display-4 d-block mb-3"></i>
                                <p>No budgets found.</p>
                                <a asp-page="Create" class="btn btn-primary">
                                    <i class="bi bi-plus-circle"></i> Create Your First Budget
                                </a>
                            </td>
                        </tr>
                    }
                    @foreach (var budget in Model.Budgets)
                    {
                        var totalBudgeted = budget.Lines.Sum(l => l.BudgetedAmount);
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    <i class="@budget.GetStateIcon() me-2"></i>
                                    <div>
                                        <strong>@budget.DisplayName</strong>
                                        @if (budget.IsRevision)
                                        {
                                            <br /><small class="text-muted">
                                                <i class="bi bi-arrow-up-right"></i> Revision
                                            </small>
                                        }
                                        @if (budget.HasRevision)
                                        {
                                            <br /><small class="text-warning">
                                                <i class="bi bi-exclamation-triangle"></i> Has Revision
                                            </small>
                                        }
                                    </div>
                                </div>
                            </td>
                            <td>
                                <div>@budget.StartDate.ToString("dd MMM yyyy")</div>
                                <small class="text-muted">to @budget.EndDate.ToString("dd MMM yyyy")</small>
                                <br /><small class="badge bg-info">@budget.TotalDays days</small>
                            </td>
                            <td class="text-center">
                                <span class="badge bg-secondary">@budget.Lines.Count</span>
                            </td>
                            <td class="text-end">
                                <strong>?@totalBudgeted.ToString("N2")</strong>
                                @if (budget.State == BudgetState.Confirmed)
                                {
                                    var totalAchieved = budget.Lines.Sum(l => l.AchievedAmount);
                                    <br /><small class="text-muted">Achieved: ?@totalAchieved.ToString("N2")</small>
                                }
                            </td>
                            <td class="text-center">
                                <span class="badge @budget.GetStateBadgeClass()">
                                    @budget.State
                                </span>
                                @if (budget.IsActive())
                                {
                                    <br /><small class="badge bg-success mt-1">Active</small>
                                }
                            </td>
                            <td class="text-center">
                                <div class="btn-group" role="group">
                                    <a asp-page="./Details" asp-route-id="@budget.Id" 
                                       class="btn btn-sm btn-outline-primary" title="View Details">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    @if (budget.CanEdit)
                                    {
                                        <a asp-page="./Edit" asp-route-id="@budget.Id" 
                                           class="btn btn-sm btn-outline-secondary" title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                    }
                                    @if (budget.CanConfirm)
                                    {
                                        <a asp-page="./Confirm" asp-route-id="@budget.Id" 
                                           class="btn btn-sm btn-outline-success" title="Confirm">
                                            <i class="bi bi-check-circle"></i>
                                        </a>
                                    }
                                    @if (budget.CanRevise)
                                    {
                                        <a asp-page="./Revise" asp-route-id="@budget.Id" 
                                           class="btn btn-sm btn-outline-warning" title="Revise">
                                            <i class="bi bi-arrow-repeat"></i>
                                        </a>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@if (Model.Budgets.Any())
{
    <div class="row mt-3">
        <div class="col-12">
            <div class="card border-info">
                <div class="card-body">
                    <h6 class="card-title"><i class="bi bi-info-circle"></i> Budget States</h6>
                    <div class="row">
                        <div class="col-md-2">
                            <span class="badge bg-secondary">Draft</span> - Editable
                        </div>
                        <div class="col-md-2">
                            <span class="badge bg-success">Confirmed</span> - Active
                        </div>
                        <div class="col-md-2">
                            <span class="badge bg-warning text-dark">Revised</span> - Superseded
                        </div>
                        <div class="col-md-2">
                            <span class="badge bg-dark">Archived</span> - Read-only
                        </div>
                        <div class="col-md-2">
                            <span class="badge bg-danger">Cancelled</span> - Invalid
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
