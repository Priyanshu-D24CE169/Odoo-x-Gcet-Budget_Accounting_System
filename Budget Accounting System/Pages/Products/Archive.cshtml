@page
@model Budget_Accounting_System.Pages.Products.ArchiveModel
@{
    ViewData["Title"] = "Archive Product";
}

<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card">
                <div class="card-header bg-warning">
                    <h4 class="mb-0">Archive Product</h4>
                </div>
                <div class="card-body">
                    <h5 class="card-title">Are you sure you want to archive this product?</h5>
                    
                    <dl class="row">
                        <dt class="col-sm-4">Name</dt>
                        <dd class="col-sm-8">@Model.Product.Name</dd>

                        <dt class="col-sm-4">Category</dt>
                        <dd class="col-sm-8">@Model.Product.Category</dd>

                        <dt class="col-sm-4">Unit Price</dt>
                        <dd class="col-sm-8">@Model.Product.UnitPrice.ToString("C")</dd>
                    </dl>

                    <form method="post">
                        <input type="hidden" asp-for="Product.Id" />
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-page="Index" class="btn btn-secondary">Cancel</a>
                            <button type="submit" class="btn btn-warning">Archive</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
