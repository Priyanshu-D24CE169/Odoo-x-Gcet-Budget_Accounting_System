@page
@model Budget_Accounting_System.Pages.Products.IndexModel
@{
    ViewData["Title"] = "Products";
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col-md-8">
            <h2>Product Master</h2>
        </div>
        <div class="col-md-4 text-end">
            <a asp-page="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> New
            </a>
        </div>
    </div>

    <!-- Search and Filter -->
    <div class="row mb-3">
        <div class="col-md-6">
            <form method="get">
                <div class="input-group">
                    <input type="text" name="searchString" class="form-control" placeholder="Search products..." value="@Model.SearchString" />
                    <button class="btn btn-outline-secondary" type="submit">Search</button>
                </div>
            </form>
        </div>
        <div class="col-md-6">
            <form method="get" class="d-flex">
                <select name="filterCategory" class="form-select me-2" onchange="this.form.submit()">
                    <option value="">All Categories</option>
                    @foreach (var category in Model.Categories)
                    {
                        <option value="@category" selected="@(Model.FilterCategory == category)">@category</option>
                    }
                </select>
            </form>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Product Name</th>
                            <th>Category</th>
                            <th>Pricing</th>
                            <th>Unit</th>
                            <th>State</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model.Products)
                        {
                            <tr>
                                <td>
                                    <strong>@product.Name</strong>
                                    @if (!string.IsNullOrEmpty(product.Description))
                                    {
                                        <br /><small class="text-muted">@product.Description</small>
                                    }
                                </td>
                                <td><span class="badge bg-primary">@product.Category.Name</span></td>
                                <td>
                                    <strong>Sales:</strong> ?@product.SalesPrice.ToString("N2")<br />
                                    <small class="text-muted">Purchase: ?@product.PurchasePrice.ToString("N2")</small>
                                </td>
                                <td>@product.Unit</td>
                                <td>
                                    @switch (product.State)
                                    {
                                        case ProductState.New:
                                            <span class="badge bg-warning text-dark">New</span>
                                            break;
                                        case ProductState.Confirmed:
                                            <span class="badge bg-success">Confirmed</span>
                                            break;
                                        case ProductState.Archived:
                                            <span class="badge bg-secondary">Archived</span>
                                            break;
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-page="Details" asp-route-id="@product.Id" class="btn btn-sm btn-info" title="View Details">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        @if (product.State == ProductState.New)
                                        {
                                            <a asp-page="Edit" asp-route-id="@product.Id" class="btn btn-sm btn-warning" title="Edit">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                        }
                                        @if (product.State != ProductState.Archived)
                                        {
                                            <a asp-page="Archive" asp-route-id="@product.Id" class="btn btn-sm btn-secondary" title="Archive">
                                                <i class="bi bi-archive"></i>
                                            </a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (!Model.Products.Any())
            {
                <div class="text-center text-muted py-5">
                    <h5>No products found</h5>
                    <p>Click "New" to create your first product.</p>
                </div>
            }
        </div>
    </div>
</div>
