@page
@model Budget_Accounting_System.Pages.Contacts.DetailsModel
@{
    ViewData["Title"] = "Contact Details";
}

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    <ul class="nav nav-tabs card-header-tabs">
                        <li class="nav-item">
                            <a class="nav-link disabled">New</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="#">Confirm</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link disabled">Archived</a>
                        </li>
                        <li class="nav-item ms-auto">
                            <a asp-page="Index" class="nav-link">Back</a>
                        </li>
                    </ul>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h4 class="card-title mb-0">Contact Details</h4>
                        <div>
                            <a asp-page="Edit" asp-route-id="@Model.Contact.Id" class="btn btn-warning">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            @if (Model.Contact.IsActive)
                            {
                                <a asp-page="Archive" asp-route-id="@Model.Contact.Id" class="btn btn-secondary">
                                    <i class="bi bi-archive"></i> Archive
                                </a>
                            }
                        </div>
                    </div>

                    <dl class="row">
                        <dt class="col-sm-3">Name</dt>
                        <dd class="col-sm-9">@Model.Contact.Name</dd>

                        <dt class="col-sm-3">Email</dt>
                        <dd class="col-sm-9">
                            <a href="mailto:@Model.Contact.Email">@Model.Contact.Email</a>
                        </dd>

                        <dt class="col-sm-3">Phone</dt>
                        <dd class="col-sm-9">@Model.Contact.Phone</dd>

                        <dt class="col-sm-3">Type</dt>
                        <dd class="col-sm-9">
                            <span class="badge bg-info">@Model.Contact.Type</span>
                        </dd>

                        <dt class="col-sm-3">Address</dt>
                        <dd class="col-sm-9">
                            <pre class="mb-0">@Model.Contact.Address</pre>
                        </dd>

                        <dt class="col-sm-3">Status</dt>
                        <dd class="col-sm-9">
                            @if (Model.Contact.IsActive)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Archived</span>
                            }
                        </dd>

                        <dt class="col-sm-3">Created Date</dt>
                        <dd class="col-sm-9">@Model.Contact.CreatedDate.ToString("dd MMM yyyy HH:mm")</dd>

                        @if (Model.Contact.ModifiedDate.HasValue)
                        {
                            <dt class="col-sm-3">Modified Date</dt>
                            <dd class="col-sm-9">@Model.Contact.ModifiedDate.Value.ToString("dd MMM yyyy HH:mm")</dd>
                        }
                    </dl>

                    <!-- Transaction Summary -->
                    <hr class="my-4" />
                    <h5>Transaction Summary</h5>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h6 class="card-subtitle mb-2 text-muted">Purchase Orders</h6>
                                    <p class="card-text display-6">@Model.PurchaseOrderCount</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h6 class="card-subtitle mb-2 text-muted">Sales Orders</h6>
                                    <p class="card-text display-6">@Model.SalesOrderCount</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
