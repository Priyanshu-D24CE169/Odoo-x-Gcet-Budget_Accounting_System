@page
@model Budget_Accounting_System.Pages.VendorBills.PayModel
@{
    ViewData["Title"] = "Pay Vendor Bill";
    var amountDue = Model.VendorBill.TotalAmount - Model.VendorBill.PaidAmount;
}

<div class="container">
    <div class="row">
        <div class="col-md-10 offset-md-1">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0"><i class="bi bi-cash-coin"></i> Record Payment - @Model.VendorBill.BillNumber</h4>
                </div>
                <div class="card-body">
                    <!-- Bill Summary -->
                    <div class="alert alert-info">
                        <h6 class="alert-heading"><i class="bi bi-info-circle"></i> Bill Summary</h6>
                        <div class="row">
                            <div class="col-md-6">
                                <strong>Vendor:</strong> @Model.VendorBill.Vendor.Name
                            </div>
                            <div class="col-md-6">
                                <strong>Bill Date:</strong> @Model.VendorBill.BillDate.ToString("dd/MM/yyyy")
                            </div>
                        </div>
                        <div class="row mt-2">
                            <div class="col-md-4">
                                <strong>Total Amount:</strong> ?@Model.VendorBill.TotalAmount.ToString("N2")
                            </div>
                            <div class="col-md-4">
                                <strong>Already Paid:</strong> ?@Model.VendorBill.PaidAmount.ToString("N2")
                            </div>
                            <div class="col-md-4">
                                <strong class="text-danger">Amount Due:</strong> <span class="text-danger fw-bold">?@amountDue.ToString("N2")</span>
                            </div>
                        </div>
                    </div>

                    <!-- Affected Budgets -->
                    @if (Model.AffectedBudgets.Any())
                    {
                        <div class="alert alert-warning">
                            <h6 class="alert-heading"><i class="bi bi-piggy-bank"></i> Budget Impact</h6>
                            <p class="mb-2">This payment will update the following budget(s):</p>
                            <ul class="mb-0">
                                @foreach (var budget in Model.AffectedBudgets)
                                {
                                    <li>
                                        <strong>@budget.Name</strong> 
                                        <small class="text-muted">
                                            (@budget.StartDate.ToString("MMM dd") - @budget.EndDate.ToString("MMM dd, yyyy"))
                                        </small>
                                    </li>
                                }
                            </ul>
                            <hr />
                            <small class="text-muted">
                                <i class="bi bi-lightning-fill"></i> 
                                Budget actual amounts will be automatically updated after payment.
                            </small>
                        </div>
                    }

                    <form method="post">
                        <input type="hidden" asp-for="Payment.VendorBillId" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="Payment.PaymentDate" class="form-label fw-semibold">Payment Date *</label>
                                <input asp-for="Payment.PaymentDate" type="date" class="form-control" required />
                                <span asp-validation-for="Payment.PaymentDate" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Payment.Method" class="form-label fw-semibold">Payment Method *</label>
                                <select asp-for="Payment.Method" class="form-select" required>
                                    <option value="">-- Select Payment Method --</option>
                                    <option value="@PaymentMethod.Cash">Cash</option>
                                    <option value="@PaymentMethod.BankTransfer">Bank Transfer</option>
                                    <option value="@PaymentMethod.Check">Check</option>
                                </select>
                                <span asp-validation-for="Payment.Method" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Payment.Amount" class="form-label fw-semibold">Payment Amount (?) *</label>
                            <div class="input-group">
                                <span class="input-group-text">?</span>
                                <input asp-for="Payment.Amount" type="number" step="0.01" class="form-control" 
                                       max="@amountDue" placeholder="Enter amount..." required />
                            </div>
                            <span asp-validation-for="Payment.Amount" class="text-danger"></span>
                            <div class="form-text d-flex justify-content-between align-items-center">
                                <span>Maximum payable: ?@amountDue.ToString("N2")</span>
                                <button type="button" class="btn btn-sm btn-outline-primary" 
                                        onclick="document.getElementById('Payment_Amount').value = @amountDue">
                                    <i class="bi bi-cash-stack"></i> Pay Full Amount
                                </button>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-12">
                                <label asp-for="Payment.Reference" class="form-label fw-semibold">Reference / Transaction ID</label>
                                <input asp-for="Payment.Reference" class="form-control" 
                                       placeholder="e.g., CHQ#12345, TXN#ABC123..." />
                                <span asp-validation-for="Payment.Reference" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Payment.Notes" class="form-label fw-semibold">Notes</label>
                            <textarea asp-for="Payment.Notes" class="form-control" rows="3" 
                                      placeholder="Additional payment notes..."></textarea>
                            <span asp-validation-for="Payment.Notes" class="text-danger"></span>
                        </div>

                        <hr />

                        <div class="d-flex justify-content-between">
                            <a asp-page="Details" asp-route-id="@Model.VendorBill.Id" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="bi bi-cash-coin"></i> Record Payment & Update Budgets
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

}
