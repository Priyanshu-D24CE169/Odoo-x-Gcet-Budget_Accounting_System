@model ShivFurnitureERP.ViewModels.AnalyticalBudgets.AnalyticalBudgetFormViewModel
@using ShivFurnitureERP.ViewModels.AnalyticalBudgets
@{
    ViewData["Title"] = "Revise Budget";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/analytical-budget-master.css" asp-append-version="true" />
}

<div class="budget-page">
    <div class="container-fluid">
        <div class="budget-hero">
            <div>
                <p class="budget-eyebrow">Budget Revision</p>
                <h1>Revise Budget</h1>
                <p>Clone the original record, keep its name, and adjust the limit or dates. The previous version becomes read-only.</p>
            </div>
        </div>

        <div class="budget-card">
            <div class="master-action-bar">
                <a asp-action="Create" class="master-action-btn">New</a>
                <a asp-action="Index" asp-route-mode="@BudgetListMode.Draft" class="master-action-btn">Draft</a>
                <a asp-action="Index" asp-route-mode="@BudgetListMode.Confirm" class="master-action-btn">Confirm</a>
                <a asp-action="Index" asp-route-mode="@BudgetListMode.Revise" class="master-action-btn is-primary">Revise</a>
                <a asp-action="Index" asp-route-mode="@BudgetListMode.Archived" class="master-action-btn">Archived</a>
                <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="master-action-btn">Home</a>
                <a asp-action="Details" asp-route-id="@Model.AnalyticalBudgetId" class="master-action-btn">Back</a>
            </div>

            <form method="post" asp-action="CreateRevision" asp-route-id="@Model.AnalyticalBudgetId" class="budget-form">
                @Html.AntiForgeryToken()
                <partial name="_Form" model="Model" />
                <div class="budget-form-actions">
                    <button type="submit" class="btn btn-primary px-4">Create Revision</button>
                    <a asp-action="Details" asp-route-id="@Model.AnalyticalBudgetId" class="btn btn-link">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
