@model ShivFurnitureERP.ViewModels.CustomerInvoices.CustomerInvoiceDetailsViewModel
@using ShivFurnitureERP.Models
@{
    ViewData["Title"] = $"Invoice {Model.InvoiceNumber}";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    var cashPaid = Model.Payments.Where(p => p.PaymentMode == PaymentMode.Cash).Sum(p => p.Amount);
    var bankPaid = Model.Payments.Where(p => p.PaymentMode == PaymentMode.Bank).Sum(p => p.Amount);
}

<section class="py-4">
    <div class="d-flex justify-content-between align-items-center flex-wrap gap-2 mb-3">
        <div>
            <h2 class="mb-0">Invoice <span class="text-muted">@Model.InvoiceNumber</span></h2>
            <p class="text-muted mb-0">Sales Order @Model.SalesOrderNumber &middot; @Model.CustomerName</p>
        </div>
        <div class="d-flex gap-2">
            <a asp-area="Admin" asp-controller="CustomerInvoices" asp-action="Index" class="btn btn-outline-secondary">Back to list</a>
            @if (Model.CanConfirm)
            {
                <form asp-action="Confirm" asp-route-id="@Model.CustomerInvoiceId" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-success">Confirm</button>
                </form>
            }
            @if (Model.CanCancel)
            {
                <form asp-action="Cancel" asp-route-id="@Model.CustomerInvoiceId" method="post" class="d-inline" onsubmit="return confirm('Cancel this invoice?');">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-outline-danger">Cancel</button>
                </form>
            }
        </div>
    </div>

    @if (TempData["StatusMessage"] is string message)
    {
        <div class="alert alert-success">@message</div>
    }

    <div class="row g-4 mb-4">
        <div class="col-lg-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title">Invoice Info</h5>
                    <dl class="row mb-0">
                        <dt class="col-5">Invoice Date</dt>
                        <dd class="col-7">@Model.InvoiceDate.ToString("dd MMM yyyy")</dd>
                        <dt class="col-5">Due Date</dt>
                        <dd class="col-7">@Model.DueDate.ToString("dd MMM yyyy")</dd>
                        <dt class="col-5">Status</dt>
                        <dd class="col-7">@Model.Status</dd>
                        <dt class="col-5">Payment</dt>
                        <dd class="col-7">@Model.PaymentStatus</dd>
                    </dl>
                </div>
            </div>
        </div>
        <div class="col-lg-8">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h5 class="card-title mb-0">Payment Summary</h5>
                        <span class="badge bg-secondary">Amount Due: @Model.AmountDue.ToString("N2")</span>
                    </div>
                    <div class="row text-center">
                        <div class="col">
                            <p class="text-muted mb-1">Total</p>
                            <p class="h4 mb-0">@Model.TotalAmount.ToString("N2")</p>
                        </div>
                        <div class="col">
                            <p class="text-muted mb-1">Paid</p>
                            <p class="h4 text-success mb-0">@Model.AmountPaid.ToString("N2")</p>
                        </div>
                        <div class="col">
                            <p class="text-muted mb-1">Cash</p>
                            <p class="h5 mb-0">@cashPaid.ToString("N2")</p>
                        </div>
                        <div class="col">
                            <p class="text-muted mb-1">Bank</p>
                            <p class="h5 mb-0">@bankPaid.ToString("N2")</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <h5 class="card-title">Invoice Lines</h5>
            <div class="table-responsive">
                <table class="table table-bordered align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Product</th>
                            <th style="width:120px;">Qty</th>
                            <th style="width:140px;">Unit Price</th>
                            <th class="text-end" style="width:160px;">Line Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var line in Model.Lines)
                        {
                            <tr>
                                <td>@line.ProductName</td>
                                <td>@line.Quantity.ToString("N2")</td>
                                <td>@line.UnitPrice.ToString("N2")</td>
                                <td class="text-end fw-semibold">@line.Total.ToString("N2")</td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <th colspan="3" class="text-end">Grand Total</th>
                            <th class="text-end h5">@Model.TotalAmount.ToString("N2")</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-lg-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Payments</h5>
                    @if (!Model.Payments.Any())
                    {
                        <p class="text-muted mb-0">No payments recorded yet.</p>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-sm align-middle mb-0">
                                <thead>
                                    <tr>
                                        <th>Receipt</th>
                                        <th>Date</th>
                                        <th class="text-end">Amount</th>
                                        <th>Mode</th>
                                        <th>Note</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var payment in Model.Payments)
                                    {
                                        <tr>
                                            <td>@payment.PaymentNumber</td>
                                            <td>@payment.PaymentDate.ToString("dd MMM yyyy")</td>
                                            <td class="text-end fw-semibold">@payment.Amount.ToString("N2")</td>
                                            <td>@payment.PaymentMode</td>
                                            <td>@payment.Note</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h5 class="card-title mb-0">Record Payment</h5>
                        @if (!Model.CanRecordPayment)
                        {
                            <span class="badge bg-secondary">Disabled</span>
                        }
                    </div>
                    @if (Model.CanRecordPayment)
                    {
                        <form asp-action="RecordPayment" method="post">
                            @Html.AntiForgeryToken()
                            <input type="hidden" asp-for="PaymentForm.CustomerInvoiceId" />
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="row g-3 mb-3">
                                <div class="col-md-6">
                                    <label asp-for="PaymentForm.PaymentDate" class="form-label"></label>
                                    <input asp-for="PaymentForm.PaymentDate" class="form-control" type="date" />
                                    <span asp-validation-for="PaymentForm.PaymentDate" class="text-danger small"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="PaymentForm.Amount" class="form-label"></label>
                                    <input asp-for="PaymentForm.Amount" class="form-control" type="number" step="0.01" min="0" max="@Model.AmountDue" />
                                    <span asp-validation-for="PaymentForm.Amount" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="row g-3 mb-3">
                                <div class="col-md-6">
                                    <label asp-for="PaymentForm.PaymentMode" class="form-label"></label>
                                    <select asp-for="PaymentForm.PaymentMode" class="form-select">
                                        @foreach (var option in Enum.GetValues<PaymentMode>())
                                        {
                                            <option value="@((int)option)">@option</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="PaymentForm.Note" class="form-label"></label>
                                    <input asp-for="PaymentForm.Note" class="form-control" />
                                    <span asp-validation-for="PaymentForm.Note" class="text-danger small"></span>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary">Record Payment</button>
                        </form>
                    }
                    else
                    {
                        <p class="text-muted">Confirm the invoice and ensure it is not fully paid to enable payments.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
