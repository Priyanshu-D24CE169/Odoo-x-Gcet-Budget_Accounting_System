@model ShivFurnitureERP.ViewModels.Contacts.ContactFormViewModel
@{
    ViewData["Title"] = "Add Contact";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/contact-master.css" asp-append-version="true" />
}

<div class="contact-master-page">
    <div class="container-fluid">
        <div class="contact-hero">
            <div>
                <p class="eyebrow">Contact Master</p>
                <h1>Add Contact</h1>
                <p>Create a new customer or vendor profile complete with address, tags, and profile image.</p>
            </div>
            <div class="contact-hero-actions">
                <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Home</a>
                <a asp-area="Admin" asp-controller="Contacts" asp-action="Index" class="contact-add-btn">Directory</a>
            </div>
        </div>

        <div class="contact-sheet">
            <div class="master-action-bar">
                <a asp-action="Create" class="master-action-btn is-primary">New</a>
                <a asp-action="Index" class="master-action-btn">Directory</a>
                <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="master-action-btn">Home</a>
                <a href="javascript:history.back()" class="master-action-btn">Back</a>
            </div>

            <div class="contact-pill-row">
                <div class="contact-pill">New profile</div>
                <div class="contact-note">Capture rich contact details, add tags, and control portal access from one place.</div>
            </div>

            <form asp-area="Admin" asp-controller="Contacts" asp-action="Create" method="post" enctype="multipart/form-data" class="contact-form" novalidate>
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="contact-validation"></div>
                <partial name="_Form" model="Model" />
                <div class="contact-form-actions">
                    <a asp-area="Admin" asp-controller="Contacts" asp-action="Index">Cancel</a>
                    <button type="submit">Save Contact</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
