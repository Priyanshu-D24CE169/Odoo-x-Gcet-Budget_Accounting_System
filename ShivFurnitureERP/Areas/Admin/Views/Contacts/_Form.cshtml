@model ShivFurnitureERP.ViewModels.Contacts.ContactFormViewModel

<div class="contact-form-layout">
    <div>
        <section class="contact-form-section">
            <h5>Contact Information</h5>
            <div class="contact-field-grid">
                <div class="contact-field">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="contact-field">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="contact-field">
                    <label asp-for="Phone"></label>
                    <input asp-for="Phone" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
                <div class="contact-field">
                    <label asp-for="Type"></label>
                    <select asp-for="Type" asp-items="Html.GetEnumSelectList<ShivFurnitureERP.Models.ContactType>()"></select>
                </div>
            </div>
        </section>

        <section class="contact-form-section">
            <h5>Address</h5>
            <div class="contact-field-grid">
                <div class="contact-field full">
                    <label asp-for="Street"></label>
                    <input asp-for="Street" />
                </div>
                <div class="contact-field">
                    <label asp-for="City"></label>
                    <input asp-for="City" />
                </div>
                <div class="contact-field">
                    <label asp-for="State"></label>
                    <input asp-for="State" />
                </div>
                <div class="contact-field">
                    <label asp-for="Country"></label>
                    <input asp-for="Country" />
                </div>
                <div class="contact-field">
                    <label asp-for="Pincode"></label>
                    <input asp-for="Pincode" />
                </div>
            </div>
        </section>

        <section class="contact-form-section">
            <h5>Tags & Status</h5>
            <div class="contact-field-grid">
                <div class="contact-field full">
                    <label asp-for="TagsInput"></label>
                    <input asp-for="TagsInput" placeholder="Furniture, Enterprise, Priority" />
                    <span class="form-text">Separate tags with commas to auto-create new tags.</span>
                </div>
                <div class="contact-field">
                    <label class="contact-checkbox">
                        <input asp-for="IsArchived" />
                        <span>@Html.DisplayNameFor(m => m.IsArchived)</span>
                    </label>
                </div>
                <div class="contact-field">
                    <span class="contact-meta-label">Created On</span>
                    <span class="contact-meta-value">@Model.CreatedOn.ToString("dd MMM yyyy HH:mm")</span>
                </div>
            </div>
        </section>
    </div>

    <aside class="contact-form-aside">
        <section class="contact-form-section">
            <h5>Profile Image</h5>
            <div class="contact-field full">
                <label asp-for="ImageFile"></label>
                <input asp-for="ImageFile" type="file" accept="image/*" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>
            @if (!string.IsNullOrWhiteSpace(Model.ExistingImagePath))
            {
                <div class="contact-image-preview">
                    <img src="@Model.ExistingImagePath" class="img-fluid rounded" alt="Contact image" />
                </div>
            }
            else
            {
                <div class="contact-image-preview text-muted small">
                    No image uploaded.
                </div>
            }
        </section>
    </aside>
</div>
