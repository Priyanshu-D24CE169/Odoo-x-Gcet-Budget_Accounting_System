@model ShivFurnitureERP.ViewModels.Contacts.ContactFormViewModel

<div class="row g-4">
    <div class="col-md-8">
        <div class="card shadow-sm mb-4">
            <div class="card-body">
                <h5 class="card-title">Contact Information</h5>
                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Email" class="form-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Phone" class="form-label"></label>
                        <input asp-for="Phone" class="form-control" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Type" class="form-label"></label>
                        <select asp-for="Type" class="form-select" asp-items="Html.GetEnumSelectList<ShivFurnitureERP.Models.ContactType>()"></select>
                    </div>
                </div>
            </div>
        </div>

        <div class="card shadow-sm mb-4">
            <div class="card-body">
                <h5 class="card-title">Address</h5>
                <div class="row g-3">
                    <div class="col-md-12">
                        <label asp-for="Street" class="form-label"></label>
                        <input asp-for="Street" class="form-control" />
                    </div>
                    <div class="col-md-6">
                        <label asp-for="City" class="form-label"></label>
                        <input asp-for="City" class="form-control" />
                    </div>
                    <div class="col-md-6">
                        <label asp-for="State" class="form-label"></label>
                        <input asp-for="State" class="form-control" />
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Country" class="form-label"></label>
                        <input asp-for="Country" class="form-control" />
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Pincode" class="form-label"></label>
                        <input asp-for="Pincode" class="form-control" />
                    </div>
                </div>
            </div>
        </div>

        <div class="card shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Tags & Status</h5>
                <div class="row g-3">
                    <div class="col-md-12">
                        <label asp-for="TagsInput" class="form-label"></label>
                        <input asp-for="TagsInput" class="form-control" placeholder="Furniture, Enterprise, Priority" />
                        <span class="form-text">Separate tags with commas to auto-create new tags.</span>
                    </div>
                    <div class="col-md-4">
                        <div class="form-check mt-4 pt-2">
                            <input asp-for="IsArchived" class="form-check-input" />
                            <label asp-for="IsArchived" class="form-check-label">Archived</label>
                        </div>
                    </div>
                    <div class="col-md-8 text-end">
                        <label class="form-label d-block">Created On</label>
                        <span class="fw-semibold">@Model.CreatedOn.ToString("dd MMM yyyy HH:mm")</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card shadow-sm mb-4">
            <div class="card-body">
                <h5 class="card-title">Profile Image</h5>
                <div class="mb-3">
                    <label asp-for="ImageFile" class="form-label"></label>
                    <input asp-for="ImageFile" class="form-control" type="file" accept="image/*" />
                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                </div>
                @if (!string.IsNullOrWhiteSpace(Model.ExistingImagePath))
                {
                    <div class="text-center">
                        <img src="@Model.ExistingImagePath" class="img-fluid rounded" alt="Contact image" />
                    </div>
                }
                else
                {
                    <p class="text-muted small mb-0">No image uploaded.</p>
                }
            </div>
        </div>
    </div>
</div>
