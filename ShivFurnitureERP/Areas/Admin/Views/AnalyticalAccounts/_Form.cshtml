@model ShivFurnitureERP.ViewModels.AnalyticalAccounts.AnalyticalAccountFormViewModel

<div class="account-form-grid">
    <div class="account-field account-field-full">
        <label asp-for="Name"></label>
        <input asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="account-field account-field-full">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" placeholder="Optional notes for sales/purchase allocation"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="account-field">
        <label class="account-checkbox">
            <input asp-for="IsArchived" />
            <span>@Html.DisplayNameFor(m => m.IsArchived)</span>
        </label>
    </div>
    <div class="account-field">
        <span class="account-meta-label">Created On</span>
        <span class="account-meta-value">@Model.CreatedOn.ToString("dd MMM yyyy HH:mm")</span>
    </div>
</div>
