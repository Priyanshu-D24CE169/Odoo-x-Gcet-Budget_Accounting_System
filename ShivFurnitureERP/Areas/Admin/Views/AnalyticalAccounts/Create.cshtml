@model ShivFurnitureERP.ViewModels.AnalyticalAccounts.AnalyticalAccountFormViewModel
@{
    ViewData["Title"] = "Add Analytical Account";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/analytical-account-master.css" asp-append-version="true" />
}

<div class="account-master-page">
    <div class="container-fluid">
        <div class="account-hero">
            <div class="account-hero-text">
                <p class="account-eyebrow">Account Master</p>
                <h1>Add Analytical Account</h1>
                <p>Create cost centers that power Sales, Purchase, and Budget analytics with one polished flow.</p>
            </div>
            <div class="account-hero-actions">
                <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="account-chip-btn">Home</a>
                <a asp-area="Admin" asp-controller="AnalyticalAccounts" asp-action="Index" class="account-add-btn">Master List</a>
            </div>
        </div>

        <div class="account-sheet">
            <div class="master-action-bar">
                <a asp-action="Create" class="master-action-btn is-primary">New</a>
                <a asp-action="Index" class="master-action-btn">Directory</a>
                <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="master-action-btn">Home</a>
                <a href="javascript:history.back()" class="master-action-btn">Back</a>
            </div>

            <div class="account-pill-row">
                <div class="account-pill">New entry</div>
                <div class="account-note">Keep analytical allocations crisp with archived toggles and contextual notes.</div>
            </div>

            <form asp-area="Admin" asp-controller="AnalyticalAccounts" asp-action="Create" method="post" class="account-form" novalidate>
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="account-validation"></div>
                <partial name="_Form" model="Model" />
                <div class="account-form-actions">
                    <a asp-area="Admin" asp-controller="AnalyticalAccounts" asp-action="Index">Cancel</a>
                    <button type="submit">Save Account</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
