@model ShivFurnitureERP.ViewModels.SalesOrders.SalesOrderFormViewModel
@{
    ViewData["Title"] = $"Sales Order {Model.SONumber}";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<section class="py-4">
    <div class="d-flex justify-content-between align-items-center flex-wrap gap-2 mb-3">
        <div>
            <h2 class="mb-0">Sales Order <span class="text-muted">@Model.SONumber</span></h2>
            <p class="text-muted mb-0">Order summary</p>
        </div>
        <div class="d-flex gap-2">
            @if (Model.CanCreateInvoice && Model.SalesOrderId.HasValue)
            {
                <a asp-area="Admin" asp-controller="CustomerInvoices" asp-action="Create" asp-route-salesOrderId="@Model.SalesOrderId" class="btn btn-primary">Create Invoice</a>
            }
            <a asp-area="Admin" asp-controller="SalesOrders" asp-action="Index" class="btn btn-outline-secondary">Back to list</a>
        </div>
    </div>

    @await Html.PartialAsync("_Form", Model)
</section>
