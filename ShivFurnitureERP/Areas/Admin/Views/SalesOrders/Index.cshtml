@model IReadOnlyList<ShivFurnitureERP.ViewModels.SalesOrders.SalesOrderListItemViewModel>
@{
    ViewData["Title"] = "Sales Orders";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    var search = ViewData["Search"]?.ToString();
    var statusValue = ViewData["Status"]?.ToString();
}

<section class="py-4">
    <div class="d-flex justify-content-between flex-wrap gap-2 align-items-center mb-3">
        <div>
            <h2 class="mb-0">Sales Orders</h2>
            <p class="text-muted mb-0">Track customer commitments and convert to invoices.</p>
        </div>
        <a asp-area="Admin" asp-controller="SalesOrders" asp-action="Create" class="btn btn-primary">+ New Sales Order</a>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <form method="get" class="row g-3 align-items-end">
                <div class="col-md-4">
                    <label class="form-label" for="search">Search</label>
                    <input type="text" class="form-control" id="search" name="search" value="@search" placeholder="SO number or customer" />
                </div>
                <div class="col-md-3">
                    <label class="form-label" for="status">Status</label>
                    <select id="status" name="status" class="form-select">
                        <option value="">All</option>
                        @foreach (var value in Enum.GetValues<ShivFurnitureERP.Models.SalesOrderStatus>())
                        {
                            var selected = string.Equals(statusValue, value.ToString(), StringComparison.OrdinalIgnoreCase);
                            <option value="@value" selected="@(selected ? "selected" : null)">@value</option>
                        }
                    </select>
                </div>
                <div class="col-md-2 text-end">
                    <button type="submit" class="btn btn-outline-primary w-100">Filter</button>
                </div>
            </form>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="table-responsive">
            <table class="table table-striped align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>SO #</th>
                        <th>Customer</th>
                        <th>Date</th>
                        <th>Reference</th>
                        <th>Status</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="6" class="text-center py-4 text-muted">No sales orders found.</td>
                        </tr>
                    }
                    else
                    {
                        foreach (var order in Model)
                        {
                            <tr>
                                <td class="fw-semibold">@order.SONumber</td>
                                <td>@order.CustomerName</td>
                                <td>@order.SODate.ToString("d")</td>
                                <td>@order.Reference</td>
                                <td>@order.Status</td>
                                <td class="text-end">
                                    <a asp-area="Admin" asp-controller="SalesOrders" asp-action="Edit" asp-route-id="@order.SalesOrderId" class="btn btn-sm btn-outline-primary">Open</a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>
