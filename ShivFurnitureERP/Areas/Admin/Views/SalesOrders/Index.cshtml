@model IReadOnlyList<ShivFurnitureERP.ViewModels.SalesOrders.SalesOrderListItemViewModel>
@{
    ViewData["Title"] = "Sales Orders";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    var search = ViewData["Search"]?.ToString();
    var statusValue = ViewData["Status"]?.ToString();
}

@section Styles {
    <link rel="stylesheet" href="~/css/sales-orders.css" asp-append-version="true" />
}

<div class="sales-order-page">
    <div class="container-fluid">
        <div class="sales-order-hero">
            <div>
                <p class="user-eyebrow sales-order-eyebrow">Order Master</p>
                <h1>Sales Orders</h1>
                <p>Track customer commitments, confirm delivery promises, and convert them into invoices with confidence.</p>
            </div>
            <div class="sales-order-nav">
                <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Home</a>
                <a asp-area="Admin" asp-controller="SalesOrders" asp-action="Create">+ New Sales Order</a>
            </div>
        </div>

        <div class="sales-order-sheet">
            <div class="sales-order-pill-row">
                <div class="sales-order-pill">Active pipeline</div>
                <div class="sales-order-note">@Model.Count record@(Model.Count == 1 ? string.Empty : "s") in queue</div>
            </div>

            <form method="get" class="sales-order-filter-grid">
                <div class="sales-order-field">
                    <label for="search">Search</label>
                    <input type="text" id="search" name="search" value="@search" placeholder="SO number or customer" />
                </div>
                <div class="sales-order-field">
                    <label for="status">Status</label>
                    <select id="status" name="status">
                        <option value="">All</option>
                        @foreach (var value in Enum.GetValues<ShivFurnitureERP.Models.SalesOrderStatus>())
                        {
                            var selected = string.Equals(statusValue, value.ToString(), StringComparison.OrdinalIgnoreCase);
                            <option value="@value" selected="@(selected ? "selected" : null)">@value</option>
                        }
                    </select>
                </div>
                <div class="sales-order-filter-actions">
                    <button type="submit">Filter</button>
                    <a asp-action="Index">Reset</a>
                </div>
            </form>

            @if (!Model.Any())
            {
                <div class="sales-order-empty">No sales orders found.</div>
            }
            else
            {
                <div class="sales-order-table-wrapper">
                    <table class="sales-order-list">
                        <thead>
                            <tr>
                                <th>SO #</th>
                                <th>Customer</th>
                                <th>Date</th>
                                <th>Reference</th>
                                <th>Status</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        @foreach (var order in Model)
                        {
                            <tr>
                                <td class="fw-semibold">@order.SONumber</td>
                                <td>@order.CustomerName</td>
                                <td>@order.SODate.ToString("dd MMM yy")</td>
                                <td>@order.Reference</td>
                                <td><span class="sales-order-status-pill">@order.Status</span></td>
                                <td class="text-end">
                                    <a asp-area="Admin" asp-controller="SalesOrders" asp-action="Edit" asp-route-id="@order.SalesOrderId" class="sales-order-link">Open</a>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
