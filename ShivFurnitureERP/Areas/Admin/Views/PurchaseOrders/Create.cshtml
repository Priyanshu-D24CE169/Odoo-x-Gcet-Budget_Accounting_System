@model ShivFurnitureERP.ViewModels.PurchaseOrders.PurchaseOrderFormViewModel
@{
    ViewData["Title"] = "New Purchase Order";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/purchase-orders.css" asp-append-version="true" />
}

<section class="purchase-order-page">
    <div class="container-fluid">
        <div class="purchase-order-hero">
            <div>
                <div class="eyebrow">Purchase Master</div>
                <h1>New Purchase Order</h1>
                <p>Draft, route, and confirm vendor purchasing with the same polished pastel flow.</p>
            </div>
            <div class="purchase-order-actions">
                <a asp-area="Admin" asp-controller="PurchaseOrders" asp-action="Create" class="btn-primary-pill">New</a>
                <a asp-area="Admin" asp-controller="PurchaseOrders" asp-action="Index">Directory</a>
                <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Home</a>
                <a asp-area="Admin" asp-controller="PurchaseOrders" asp-action="Index">Back</a>
            </div>
        </div>

        <form asp-area="Admin" asp-controller="PurchaseOrders" asp-action="Create" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>
            <partial name="_Form" model="Model" />
            <div class="purchase-order-filter-actions mt-4">
                <a asp-area="Admin" asp-controller="PurchaseOrders" asp-action="Index">Cancel</a>
                <button type="submit">Create Purchase Order</button>
            </div>
        </form>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
