@model ShivFurnitureERP.ViewModels.PurchaseOrders.PurchaseOrderFormViewModel
@{
    ViewData["Title"] = "New Purchase Order";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<section class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-semibold mb-0">New Purchase Order</h2>
            <p class="text-muted mb-0">Capture vendor, lines, and analytical details for this PO.</p>
        </div>
        <a asp-area="Admin" asp-controller="PurchaseOrders" asp-action="Index" class="btn btn-outline-secondary">Back to list</a>
    </div>

    <form asp-area="Admin" asp-controller="PurchaseOrders" asp-action="Create" method="post">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>
        <partial name="_Form" model="Model" />
        <div class="d-flex justify-content-end gap-2 mt-4">
            <a asp-area="Admin" asp-controller="PurchaseOrders" asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
            <button type="submit" class="btn btn-primary px-4">Create Purchase Order</button>
        </div>
    </form>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
