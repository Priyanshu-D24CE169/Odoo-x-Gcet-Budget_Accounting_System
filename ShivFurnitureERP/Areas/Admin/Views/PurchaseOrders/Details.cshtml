@model ShivFurnitureERP.ViewModels.PurchaseOrders.PurchaseOrderFormViewModel
@using ShivFurnitureERP.Models
@{
    ViewData["Title"] = $"PO {Model.PONumber}";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    var totalAmount = Model.Lines.Sum(l => l.LineTotal);
    var hasWarnings = Model.Lines.Any(l => l.HasBudgetWarning);
    var statusBadgeClass = Model.Status switch
    {
        PurchaseOrderStatus.Confirmed => "text-bg-success",
        PurchaseOrderStatus.Cancelled => "text-bg-secondary",
        _ => "text-bg-warning"
    };
    var vendorName = Model.Vendors.FirstOrDefault(v => v.Value == Model.VendorId?.ToString())?.Text ?? "-";
    var productLookup = Model.Products.ToDictionary(p => p.Value, p => p.Text);
    var accountLookup = Model.AnalyticalAccounts.ToDictionary(a => a.Value, a => a.Text);
}

<section class="container-fluid">
    <div class="d-flex flex-wrap justify-content-between align-items-center mb-4 gap-3">
        <div>
            <h2 class="fw-semibold mb-0">Purchase Order Details</h2>
            <p class="text-muted mb-0">Review vendor, line items, and analytical allocations.</p>
        </div>
        <div class="d-flex flex-wrap gap-2">
            <a asp-area="Admin" asp-controller="PurchaseOrders" asp-action="Index" class="btn btn-outline-secondary">Back to list</a>
            @if (Model.Status == PurchaseOrderStatus.Draft)
            {
                <a asp-area="Admin" asp-controller="PurchaseOrders" asp-action="Edit" asp-route-id="@Model.PurchaseOrderId" class="btn btn-primary">Edit PO</a>
            }
        </div>
    </div>

    <div class="row g-4">
        <div class="col-lg-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title">Order Summary</h5>
                    <dl class="row mb-0 small">
                        <dt class="col-5 text-muted">PO Number</dt>
                        <dd class="col-7 fw-semibold">@Model.PONumber</dd>

                        <dt class="col-5 text-muted">Vendor</dt>
                        <dd class="col-7 fw-semibold">@vendorName</dd>

                        <dt class="col-5 text-muted">Reference</dt>
                        <dd class="col-7">@(!string.IsNullOrWhiteSpace(Model.Reference) ? Model.Reference : "-")</dd>

                        <dt class="col-5 text-muted">PO Date</dt>
                        <dd class="col-7">@Model.PODate.ToString("dd MMM yyyy")</dd>

                        <dt class="col-5 text-muted">Status</dt>
                        <dd class="col-7"><span class="badge @statusBadgeClass">@Model.Status</span></dd>
                    </dl>
                </div>
            </div>
        </div>
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">PO Lines</h5>
                    @if (hasWarnings)
                    {
                        <div class="alert alert-warning py-2 small">Highlighted lines indicate budgets that exceed their configured limits.</div>
                    }
                    <div class="table-responsive">
                        <table class="table table-striped align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Product</th>
                                    <th>Qty</th>
                                    <th>Unit Price</th>
                                    <th class="text-end">Total</th>
                                    <th>Analytical Account</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (!Model.Lines.Any())
                                {
                                    <tr>
                                        <td colspan="5" class="text-center py-4 text-muted">No line items found.</td>
                                    </tr>
                                }
                                else
                                {
                                    for (var i = 0; i < Model.Lines.Count; i++)
                                    {
                                        var line = Model.Lines[i];
                                        var rowClass = line.HasBudgetWarning ? "table-warning" : string.Empty;
                                        var productName = line.ProductId.HasValue && productLookup.TryGetValue(line.ProductId.Value.ToString(), out var prodText)
                                            ? prodText
                                            : "-";
                                        var accountName = line.AnalyticalAccountId.HasValue && accountLookup.TryGetValue(line.AnalyticalAccountId.Value.ToString(), out var accText)
                                            ? accText
                                            : "-";
                                        <tr class="@rowClass">
                                            <td>
                                                <div class="fw-semibold">@productName</div>
                                                @if (!string.IsNullOrWhiteSpace(line.BudgetWarningMessage))
                                                {
                                                    <div class="small text-warning">@line.BudgetWarningMessage</div>
                                                }
                                            </td>
                                            <td>@line.Quantity</td>
                                            <td>@line.UnitPrice.ToString("C")</td>
                                            <td class="text-end">@line.LineTotal.ToString("C")</td>
                                            <td>@accountName</td>
                                        </tr>
                                    }
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th colspan="3" class="text-end">Grand Total</th>
                                    <th class="text-end">@totalAmount.ToString("C")</th>
                                    <th></th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
