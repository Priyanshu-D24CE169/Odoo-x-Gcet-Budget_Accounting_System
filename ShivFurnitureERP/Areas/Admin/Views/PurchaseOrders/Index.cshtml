@model IEnumerable<ShivFurnitureERP.ViewModels.PurchaseOrders.PurchaseOrderListItemViewModel>
@using ShivFurnitureERP.Models
@using System.Linq
@{
    ViewData["Title"] = "Purchase Orders";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    var search = ViewData["Search"] as string ?? string.Empty;
    PurchaseOrderStatus? statusFilter = ViewData["Status"] is PurchaseOrderStatus typedStatus ? typedStatus : null;
    var statuses = Enum.GetValues<PurchaseOrderStatus>();
    var statusMessage = TempData["StatusMessage"] as string;
    var orderCount = Model.Count();
}

@section Styles {
    <link rel="stylesheet" href="~/css/purchase-orders.css" asp-append-version="true" />
}

<div class="purchase-order-page">
    <div class="container-fluid">
        <div class="purchase-order-hero">
            <div>
                <p class="eyebrow">Procurement Master</p>
                <h1>Purchase Orders</h1>
                <p>Create, confirm, and monitor every spend request from a single pastel command center.</p>
            </div>
            <div class="purchase-order-actions">
                <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Home</a>
                <a asp-area="Admin" asp-controller="PurchaseOrders" asp-action="Create" class="btn-primary-pill">+ New Purchase Order</a>
            </div>
        </div>

        <div class="purchase-order-sheet">
            @if (!string.IsNullOrWhiteSpace(statusMessage))
            {
                <div class="purchase-order-alert is-success">@statusMessage</div>
            }

            <div class="purchase-order-pill-row">
                <div class="purchase-order-pill">Active requisitions</div>
                <div class="purchase-order-note">@orderCount record@(orderCount == 1 ? string.Empty : "s") listed</div>
            </div>

            <form method="get" class="purchase-order-filter-grid">
                <div class="purchase-order-field">
                    <label for="search">Search</label>
                    <input type="text" id="search" name="search" value="@search" placeholder="PO number or vendor" />
                </div>
                <div class="purchase-order-field">
                    <label for="status">Status</label>
                    <select id="status" name="status">
                        <option value="">All statuses</option>
                        @foreach (var status in statuses)
                        {
                            <option value="@((int)status)" selected="@(statusFilter == status ? "selected" : null)">@status</option>
                        }
                    </select>
                </div>
                <div class="purchase-order-filter-actions">
                    <button type="submit">Filter</button>
                    <a asp-action="Index">Reset</a>
                </div>
            </form>

            @if (!Model.Any())
            {
                <div class="purchase-order-empty">No purchase orders match the selected filters.</div>
            }
            else
            {
                <div class="purchase-order-table-wrapper">
                    <table class="purchase-order-table">
                        <thead>
                            <tr>
                                <th>PO Number</th>
                                <th>Vendor</th>
                                <th>Reference</th>
                                <th>PO Date</th>
                                <th>Status</th>
                                <th class="text-end">Total</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        @foreach (var order in Model)
                        {
                            var statusClass = order.Status switch
                            {
                                PurchaseOrderStatus.Confirmed => "purchase-order-status-pill is-confirmed",
                                PurchaseOrderStatus.Cancelled => "purchase-order-status-pill is-cancelled",
                                _ => "purchase-order-status-pill is-draft"
                            };
                            var canEdit = order.Status == PurchaseOrderStatus.Draft;
                            <tr>
                                <td class="fw-semibold">@order.PONumber</td>
                                <td>@order.VendorName</td>
                                <td>@order.Reference</td>
                                <td>@order.PODate.ToString("dd MMM yyyy")</td>
                                <td><span class="@statusClass">@order.Status</span></td>
                                <td class="text-end">@order.TotalAmount.ToString("N2")</td>
                                <td class="purchase-order-actions-cell text-end">
                                    <a asp-area="Admin" asp-controller="PurchaseOrders" asp-action="Details" asp-route-id="@order.PurchaseOrderId">View</a>
                                    <a asp-area="Admin" asp-controller="PurchaseOrders" asp-action="Edit" asp-route-id="@order.PurchaseOrderId" class="@(canEdit ? string.Empty : "disabled")" aria-disabled="@(canEdit ? "false" : "true")" tabindex="@(canEdit ? "0" : "-1")">Edit</a>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
