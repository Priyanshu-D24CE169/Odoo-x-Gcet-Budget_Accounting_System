@model IEnumerable<ShivFurnitureERP.ViewModels.PurchaseOrders.PurchaseOrderListItemViewModel>
@using ShivFurnitureERP.Models
@{
    ViewData["Title"] = "Purchase Orders";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    var search = ViewData["Search"] as string ?? string.Empty;
    PurchaseOrderStatus? statusFilter = ViewData["Status"] is PurchaseOrderStatus typedStatus ? typedStatus : null;
    var statuses = Enum.GetValues<PurchaseOrderStatus>();
    var statusMessage = TempData["StatusMessage"] as string;
}

<section class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-semibold mb-0">Purchase Orders</h2>
            <p class="text-muted mb-0">Create, confirm, and monitor purchasing activity.</p>
        </div>
        <a asp-area="Admin" asp-controller="PurchaseOrders" asp-action="Create" class="btn btn-primary">+ New Purchase Order</a>
    </div>

    @if (!string.IsNullOrWhiteSpace(statusMessage))
    {
        <div class="alert alert-success">@statusMessage</div>
    }

    <form method="get" class="card shadow-sm mb-4">
        <div class="card-body row g-3 align-items-end">
            <div class="col-md-6">
                <label class="form-label" for="search">Search</label>
                <input type="text" class="form-control" id="search" name="search" value="@search" placeholder="PO number or vendor" />
            </div>
            <div class="col-md-4">
                <label class="form-label" for="status">Status</label>
                <select class="form-select" id="status" name="status">
                    <option value="">All statuses</option>
                    @foreach (var status in statuses)
                    {
                        <option value="@((int)status)" selected="@(statusFilter == status ? "selected" : null)">@status</option>
                    }
                </select>
            </div>
            <div class="col-md-2 text-md-end">
                <button type="submit" class="btn btn-outline-secondary">Filter</button>
            </div>
        </div>
    </form>

    <div class="card shadow-sm">
        <div class="table-responsive">
            <table class="table table-striped align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>PO Number</th>
                        <th>Vendor</th>
                        <th>Reference</th>
                        <th>PO Date</th>
                        <th>Status</th>
                        <th class="text-end">Total</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="7" class="text-center py-4 text-muted">No purchase orders match the selected filters.</td>
                        </tr>
                    }
                    else
                    {
                        foreach (var order in Model)
                        {
                            var badgeClass = order.Status switch
                            {
                                PurchaseOrderStatus.Confirmed => "text-bg-success",
                                PurchaseOrderStatus.Cancelled => "text-bg-secondary",
                                _ => "text-bg-warning"
                            };
                            var canEdit = order.Status == PurchaseOrderStatus.Draft;
                            <tr>
                                <td class="fw-semibold">@order.PONumber</td>
                                <td>@order.VendorName</td>
                                <td>@order.Reference</td>
                                <td>@order.PODate.ToString("dd MMM yyyy")</td>
                                <td><span class="badge @badgeClass">@order.Status</span></td>
                                <td class="text-end">@order.TotalAmount.ToString("C")</td>
                                <td class="text-end">
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-area="Admin" asp-controller="PurchaseOrders" asp-action="Details" asp-route-id="@order.PurchaseOrderId" class="btn btn-outline-secondary">View</a>
                                        <a asp-area="Admin" asp-controller="PurchaseOrders" asp-action="Edit" asp-route-id="@order.PurchaseOrderId" class="btn btn-outline-primary @(canEdit ? string.Empty : "disabled")" aria-disabled="@(canEdit ? "false" : "true")" tabindex="@(canEdit ? "0" : "-1")">Edit</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>
