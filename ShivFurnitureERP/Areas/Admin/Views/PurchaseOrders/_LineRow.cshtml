@using Microsoft.AspNetCore.Mvc.Rendering
@model ShivFurnitureERP.ViewModels.PurchaseOrders.PurchaseOrderLineViewModel
@{
    var rowIndex = ViewData["RowIndex"]?.ToString() ?? Guid.NewGuid().ToString("N");
    var products = ViewData["Products"] as IEnumerable<SelectListItem> ?? Enumerable.Empty<SelectListItem>();
    var analyticalAccounts = ViewData["AnalyticalAccounts"] as IEnumerable<SelectListItem> ?? Enumerable.Empty<SelectListItem>();
    var warningClass = Model.HasBudgetWarning ? "table-warning" : string.Empty;
    var warningText = Model.HasBudgetWarning ? Model.BudgetWarningMessage : null;
}
<tr class="purchase-line-row @warningClass" data-line-index="@rowIndex">
    <td class="w-25">
        <input type="hidden" name="Lines.Index" value="@rowIndex" />
        <input asp-for="PurchaseOrderLineId" type="hidden" />
        <select asp-for="ProductId" class="form-select form-select-sm" asp-items="products">
            <option value="">Select product</option>
        </select>
        <span asp-validation-for="ProductId" class="text-danger small"></span>
        @if (!string.IsNullOrWhiteSpace(warningText))
        {
            <div class="small text-warning fw-semibold mt-1" data-line-warning>
                @warningText
            </div>
        }
    </td>
    <td class="w-15">
        <input asp-for="Quantity" class="form-control form-control-sm" type="number" min="0.01" step="0.01" data-field="quantity" inputmode="decimal" />
        <span asp-validation-for="Quantity" class="text-danger small"></span>
    </td>
    <td class="w-15">
        <input asp-for="UnitPrice" class="form-control form-control-sm" type="number" min="0" step="0.01" data-field="unitPrice" inputmode="decimal" />
        <span asp-validation-for="UnitPrice" class="text-danger small"></span>
    </td>
    <td class="text-end w-15">
        <span class="fw-semibold line-total" data-line-total>@Model.LineTotal.ToString("N2")</span>
    </td>
    <td class="w-20">
        <select asp-for="AnalyticalAccountId" class="form-select form-select-sm" asp-items="analyticalAccounts">
            <option value="">Select account</option>
        </select>
    </td>
    <td class="text-end">
        <button type="button" class="btn btn-sm btn-outline-danger remove-line" title="Remove line">Remove</button>
    </td>
</tr>
