@model ShivFurnitureERP.ViewModels.PurchaseOrders.PurchaseOrderFormViewModel
@using ShivFurnitureERP.Models
@{
    ViewData["Title"] = $"Edit {Model.PONumber}";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    var statusMessage = TempData["StatusMessage"] as string;
    var canConfirm = Model.CanConfirm;
    var canCancel = Model.Status != PurchaseOrderStatus.Cancelled;
    var canCreateBill = Model.CanCreateBill;
}

@section Styles {
    <link rel="stylesheet" href="~/css/purchase-orders.css" asp-append-version="true" />
}

<section class="container-fluid">
    <div class="d-flex flex-wrap justify-content-between align-items-center mb-4 gap-3">
        <div>
            <h2 class="fw-semibold mb-0">Edit Purchase Order</h2>
            <p class="text-muted mb-0">Update draft lines or confirm the order when ready.</p>
        </div>
        <div class="d-flex flex-wrap gap-2">
            <a asp-area="Admin" asp-controller="PurchaseOrders" asp-action="Index" class="btn btn-outline-secondary">Back to list</a>
            <form asp-area="Admin" asp-controller="PurchaseOrders" asp-action="Confirm" asp-route-id="@Model.PurchaseOrderId" method="post">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-success" @(canConfirm ? string.Empty : "disabled")>Confirm</button>
            </form>
            <form asp-area="Admin" asp-controller="PurchaseOrders" asp-action="Cancel" asp-route-id="@Model.PurchaseOrderId" method="post">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-outline-danger" @(canCancel ? string.Empty : "disabled")>Cancel PO</button>
            </form>
            <a asp-area="Admin" asp-controller="PurchaseOrders" asp-action="CreateBill" asp-route-id="@Model.PurchaseOrderId" class="btn btn-primary @(canCreateBill ? string.Empty : "disabled")" aria-disabled="@(canCreateBill ? "false" : "true")" tabindex="@(canCreateBill ? "0" : "-1")">Create Bill</a>
        </div>
    </div>

    @if (!string.IsNullOrWhiteSpace(statusMessage))
    {
        <div class="alert alert-info">@statusMessage</div>
    }

    <form asp-area="Admin" asp-controller="PurchaseOrders" asp-action="Edit" asp-route-id="@Model.PurchaseOrderId" method="post">
        @Html.AntiForgeryToken()
        <input asp-for="PurchaseOrderId" type="hidden" />
        <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>
        <partial name="_Form" model="Model" />
        <div class="d-flex justify-content-end gap-2 mt-4">
            <a asp-area="Admin" asp-controller="PurchaseOrders" asp-action="Index" class="btn btn-outline-secondary">Discard</a>
            <button type="submit" class="btn btn-primary px-4">Save Changes</button>
        </div>
    </form>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
