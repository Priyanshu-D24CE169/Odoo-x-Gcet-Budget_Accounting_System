@model ShivFurnitureERP.ViewModels.VendorBills.VendorBillFormViewModel
@{
    var isReadOnly = ViewData["ForceReadOnly"] as bool? ?? false;
    var canRecord = Model.CanPay && !isReadOnly;
}
<div class="card shadow-sm mt-4">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-center flex-wrap gap-2 mb-3">
            <div>
                <h5 class="card-title mb-1">Payments</h5>
                <p class="text-muted mb-0">Outstanding balance: <strong>@Model.AmountDue.ToString("C")</strong></p>
            </div>
            @if (Model.VendorBillId.HasValue)
            {
                <a asp-area="Admin" asp-controller="BillPayments" asp-action="Create" asp-route-billId="@Model.VendorBillId" class="btn btn-success @(canRecord ? string.Empty : "disabled")" aria-disabled="@(canRecord ? "false" : "true")">
                    Record Payment
                </a>
            }
        </div>
        <div class="table-responsive">
            @if (Model.Payments.Any())
            {
                <table class="table table-striped align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Payment #</th>
                            <th>Date</th>
                            <th>Mode</th>
                            <th class="text-end">Amount</th>
                            <th>Note</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var payment in Model.Payments)
                        {
                            <tr>
                                <td class="fw-semibold">@payment.PaymentNumber</td>
                                <td>@payment.PaymentDate.ToString("d")</td>
                                <td>@payment.PaymentMode</td>
                                <td class="text-end">@payment.Amount.ToString("C")</td>
                                <td>@payment.Note</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="text-muted">No payments recorded yet.</div>
            }
        </div>
    </div>
</div>
