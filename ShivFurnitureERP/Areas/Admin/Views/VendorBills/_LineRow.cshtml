@using Microsoft.AspNetCore.Mvc.Rendering
@model ShivFurnitureERP.ViewModels.VendorBills.VendorBillLineViewModel
@{
    var rowIndex = ViewData["RowIndex"]?.ToString() ?? Guid.NewGuid().ToString("N");
    var products = ViewData["Products"] as IEnumerable<SelectListItem> ?? Enumerable.Empty<SelectListItem>();
    var analyticalAccounts = ViewData["AnalyticalAccounts"] as IEnumerable<SelectListItem> ?? Enumerable.Empty<SelectListItem>();
    var warningClass = Model.HasBudgetWarning ? "table-warning" : string.Empty;
    var warningText = Model.HasBudgetWarning ? Model.BudgetWarningMessage : null;
    var isReadOnly = ViewData["IsReadOnly"] as bool? ?? false;
}
<tr class="vendor-bill-line @warningClass" data-line-index="@rowIndex">
    <td class="w-25">
        <input type="hidden" name="Lines.Index" value="@rowIndex" />
        <input asp-for="VendorBillLineId" type="hidden" />
        <select asp-for="ProductId" class="form-select form-select-sm" asp-items="products" disabled="@isReadOnly">
            <option value="">Select product</option>
        </select>
        @if (isReadOnly)
        {
            <input type="hidden" asp-for="ProductId" />
        }
        <span asp-validation-for="ProductId" class="text-danger small"></span>
        @if (!string.IsNullOrWhiteSpace(warningText))
        {
            <div class="small text-warning fw-semibold mt-1" data-line-warning>
                @warningText
            </div>
        }
    </td>
    <td class="w-15">
        <input asp-for="Quantity" class="form-control form-control-sm" type="number" min="0.01" step="0.01" data-field="quantity" inputmode="decimal" readonly="@isReadOnly" />
        <span asp-validation-for="Quantity" class="text-danger small"></span>
    </td>
    <td class="w-15">
        <input asp-for="UnitPrice" class="form-control form-control-sm" type="number" min="0" step="0.01" data-field="unitPrice" inputmode="decimal" readonly="@isReadOnly" />
        <span asp-validation-for="UnitPrice" class="text-danger small"></span>
    </td>
    <td class="text-end w-15">
        <span class="fw-semibold line-total" data-line-total>@Model.LineTotal.ToString("N2")</span>
    </td>
    <td class="w-20">
        <div class="d-flex gap-2">
            <select asp-for="AnalyticalAccountId" class="form-select form-select-sm" asp-items="analyticalAccounts" disabled="@isReadOnly">
                <option value="">Select account</option>
            </select>
            @if (isReadOnly)
            {
                <input type="hidden" asp-for="AnalyticalAccountId" />
            }
            @if (Model.AnalyticalAccountId.HasValue)
            {
                <a asp-area="Admin" asp-controller="AnalyticalAccounts" asp-action="Edit" asp-route-id="@Model.AnalyticalAccountId" class="btn btn-sm btn-outline-secondary" title="View budget">Budget</a>
            }
        </div>
    </td>
    <td class="text-end">
        @if (!isReadOnly)
        {
            <button type="button" class="btn btn-sm btn-outline-danger remove-line" title="Remove line">Remove</button>
        }
    </td>
</tr>
