@model IReadOnlyList<ShivFurnitureERP.ViewModels.AdminUsers.UserListItemViewModel>
@{
    ViewData["Title"] = "Manage Users";
}

<div class="py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="h4 mb-0">Manage Users</h2>
        <a class="btn btn-primary" asp-area="Admin" asp-controller="Users" asp-action="Create">Create User</a>
    </div>

    @if (TempData["SuccessMessage"] is string successMessage)
    {
        <div class="alert alert-success" role="alert">
            @successMessage
        </div>
    }

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped mb-0 align-middle">
                    <thead class="table-light">
                        <tr>
                            <th scope="col">Login ID</th>
                            <th scope="col">Name</th>
                            <th scope="col">Email</th>
                            <th scope="col">Role</th>
                            <th scope="col">Must Change Password</th>
                            <th scope="col" class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    @if (Model.Count == 0)
                    {
                        <tr>
                            <td colspan="6" class="text-center text-muted py-4">No users found.</td>
                        </tr>
                    }
                    else
                    {
                        foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.LoginId</td>
                                <td>@user.DisplayName</td>
                                <td>@user.Email</td>
                                <td>
                                    <span class="badge bg-secondary">@user.Role</span>
                                </td>
                                <td>
                                    @if (user.MustChangePassword)
                                    {
                                        <span class="badge bg-warning text-dark">Yes</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">No</span>
                                    }
                                </td>
                                <td class="text-end">
                                    <a class="btn btn-sm btn-outline-primary" asp-area="Admin" asp-controller="Users" asp-action="Edit" asp-route-id="@user.Id">Edit</a>
                                </td>
                            </tr>
                        }
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
