@model ShivFurnitureERP.ViewModels.AdminUsers.CreateUserViewModel
@{
    ViewData["Title"] = "Create User";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/user-master.css" asp-append-version="true" />
}

<div class="user-master-page">
    <div class="container-fluid">
        <div class="user-hero">
            <div>
                <p class="user-eyebrow">User Master</p>
                <h1>Create User</h1>
                <p>Draft, confirm, and publish admin or portal profiles with the same polished flow used across the suite.</p>
            </div>
            <div class="user-hero-actions">
                <a asp-area="Admin" asp-controller="Users" asp-action="Index">All Users</a>
                <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Home</a>
            </div>
        </div>

        <div class="user-card">
            <div class="master-action-bar">
                <a asp-action="Create" class="master-action-btn is-primary">New</a>
                <a asp-action="Index" class="master-action-btn">Directory</a>
                <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="master-action-btn">Home</a>
                <a href="javascript:history.back()" class="master-action-btn">Back</a>
            </div>

            @if (TempData["SuccessMessage"] is string successMessage)
            {
                <div class="user-alert is-success" role="alert">
                    @successMessage
                </div>
            }

            <p class="user-note">
                Login IDs must be 6-12 characters and unique. Passwords require upper, lower, and special characters with a minimum length of 9 characters.
            </p>

            <form asp-area="Admin" asp-controller="Users" asp-action="Create" method="post" class="user-form" novalidate>
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="user-validation"></div>

                <div class="user-form-grid">
                    <div class="user-field">
                        <label asp-for="FullName"></label>
                        <input asp-for="FullName" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="user-field">
                        <label asp-for="Role"></label>
                        <select asp-for="Role" asp-items="Model.AvailableRoles"></select>
                        <span asp-validation-for="Role" class="text-danger"></span>
                    </div>
                    <div class="user-field">
                        <label asp-for="LoginId"></label>
                        <input asp-for="LoginId" />
                        <span asp-validation-for="LoginId" class="text-danger"></span>
                    </div>
                    <div class="user-field">
                        <label asp-for="Email"></label>
                        <input asp-for="Email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="user-field">
                        <label asp-for="Password"></label>
                        <input asp-for="Password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="user-field">
                        <label asp-for="ConfirmPassword"></label>
                        <input asp-for="ConfirmPassword" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>

                <div class="user-form-actions">
                    <a asp-area="Admin" asp-controller="Users" asp-action="Index">Cancel</a>
                    <button type="submit">Create User</button>
                </div>
            </form>

            <div class="user-role-reference">
                <h3>Role reference</h3>
                <ul>
                    <li><strong>Admin</strong> — full system access. Create these accounts sparingly.</li>
                    <li><strong>Portal</strong> — vendors/customers can review orders, invoices, bills, and pay pending invoices.</li>
                </ul>
                <p>
                    On contact creation a portal login and invite email are generated automatically for customers and vendors.
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
