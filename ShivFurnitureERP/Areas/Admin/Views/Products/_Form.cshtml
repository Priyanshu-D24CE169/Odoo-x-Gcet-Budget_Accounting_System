@model ShivFurnitureERP.ViewModels.Products.ProductFormViewModel

<div class="product-form-grid">
    <div class="product-field">
        <label asp-for="Name"></label>
        <input asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="product-field">
        <label asp-for="CategoryName"></label>
        <input asp-for="CategoryName" placeholder="e.g. Chairs" />
        <span asp-validation-for="CategoryName" class="text-danger"></span>
    </div>
    <div class="product-field">
        <label asp-for="SalesPrice"></label>
        <input asp-for="SalesPrice" />
        <span asp-validation-for="SalesPrice" class="text-danger"></span>
    </div>
    <div class="product-field">
        <label asp-for="PurchasePrice"></label>
        <input asp-for="PurchasePrice" />
        <span asp-validation-for="PurchasePrice" class="text-danger"></span>
    </div>
    <div class="product-field">
        <label class="product-checkbox">
            <input asp-for="IsArchived" />
            <span>@Html.DisplayNameFor(m => m.IsArchived)</span>
        </label>
    </div>
    <div class="product-field">
        <span class="product-meta-label">Created On</span>
        <span class="product-meta-value">@Model.CreatedOn.ToString("dd MMM yyyy HH:mm")</span>
    </div>
</div>
