@using ShivFurnitureERP.Models
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Panel</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ShivFurnitureERP.styles.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)
</head>
@{
    var sessionExpiryClaim = User?.FindFirst("session-expiration")?.Value;
}
<body class="bg-light">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">ERP Admin</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#adminNav" aria-controls="adminNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="adminNav">
                @if (User.Identity?.IsAuthenticated == true)
                {
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Dashboard</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="accountMenu" role="button" data-bs-toggle="dropdown" data-bs-auto-close="outside" aria-expanded="false">Account</a>
                            <ul class="dropdown-menu shadow-sm" aria-labelledby="accountMenu">
                                <li>
                                    <a class="dropdown-item" asp-area="Admin" asp-controller="Contacts" asp-action="Index">Contact</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="Admin" asp-controller="Products" asp-action="Index">Product</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="Admin" asp-controller="AnalyticalAccounts" asp-action="Index">Analyticals</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="Admin" asp-controller="AutoAnalyticalModels" asp-action="Index">Auto Analytic Model</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="Admin" asp-controller="AnalyticalBudgets" asp-action="Index">Budget</a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="purchaseMenu" role="button" data-bs-toggle="dropdown" data-bs-auto-close="outside" aria-expanded="false">Purchase</a>
                            <ul class="dropdown-menu shadow-sm" aria-labelledby="purchaseMenu">
                                <li>
                                    <a class="dropdown-item" asp-area="Admin" asp-controller="PurchaseOrders" asp-action="Index">Purchase Order</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="Admin" asp-controller="VendorBills" asp-action="Index">Purchase Bill</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="Admin" asp-controller="BillPayments" asp-action="Index">Payment</a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="saleMenu" role="button" data-bs-toggle="dropdown" data-bs-auto-close="outside" aria-expanded="false">Sale</a>
                            <ul class="dropdown-menu shadow-sm" aria-labelledby="saleMenu">
                                <li>
                                    <a class="dropdown-item" asp-area="Admin" asp-controller="SalesOrders" asp-action="Index">Sale Order</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="Admin" asp-controller="CustomerInvoices" asp-action="Index">Sale Invoice</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="Admin" asp-controller="CustomerInvoices" asp-action="Index" asp-route-paymentStatus="@CustomerInvoicePaymentStatus.Paid">Receipt</a>
                                </li>
                            </ul>
                        </li>
						<li class="nav-item dropdown">
							<a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">Users</a>
							<ul class="dropdown-menu">
								<li>
									<a class="dropdown-item" asp-area="Admin" asp-controller="Users" asp-action="Create">Create User</a>
								</li>
								<li>
									<a class="dropdown-item" asp-area="Admin" asp-controller="Users" asp-action="Index">Manage Users</a>
								</li>
							</ul>
						</li>
                    </ul>
                }
                @if (User.Identity?.IsAuthenticated == true)
                {
                    var rawName = User.Identity?.Name;
                    var displayName = string.IsNullOrWhiteSpace(rawName) ? "User" : rawName!.Trim();
                    var avatarInitial = displayName[0].ToString().ToUpperInvariant();
                    <div class="d-flex align-items-center gap-3 ms-lg-3">
                        @if (!string.IsNullOrWhiteSpace(sessionExpiryClaim))
                        {
                            <div class="text-white-50 small" data-session-expiry="@sessionExpiryClaim">
                                You will be logged out in <span class="fw-semibold" data-session-timer>--:--</span>
                            </div>
                        }
                        <div class="dropdown user-menu">
                            <button class="btn btn-link text-white text-decoration-none p-0 d-flex align-items-center gap-2" type="button" data-bs-toggle="dropdown" data-bs-auto-close="outside" aria-expanded="false">
                                <span class="avatar-placeholder">@avatarInitial</span>
                                <span class="fw-semibold small text-white">@displayName</span>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end shadow-sm border-0 mt-2">
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Profile">View Profile</a>
                                </li>
                                <li><hr class="dropdown-divider" /></li>
                                <li>
                                    <form asp-area="Admin" asp-controller="Account" asp-action="Logout" method="post" class="m-0">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="dropdown-item text-danger">Sign Out</button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    </div>
                }
                else
                {
                    <a class="btn btn-outline-light btn-sm" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
                }
            </div>
        </div>
    </nav>
    @if (User.Identity?.IsAuthenticated == true)
    {
        <form asp-area="Admin" asp-controller="Account" asp-action="Logout" method="post" class="d-none" id="auto-logout-form">
            @Html.AntiForgeryToken()
        </form>
    }
    <main role="main" class="container">
        @RenderBody()
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <script>
        (() => {
            const timerRoot = document.querySelector('[data-session-expiry]');
            if (!timerRoot) {
                return;
            }

            const expirySeconds = Number(timerRoot.getAttribute('data-session-expiry'));
            if (!expirySeconds) {
                return;
            }

            const timerDisplay = timerRoot.querySelector('[data-session-timer]');
            const logoutForm = document.getElementById('auto-logout-form');

            const updateTimer = () => {
                const remainingMs = expirySeconds * 1000 - Date.now();
                if (remainingMs <= 0) {
                    clearInterval(intervalId);
                    if (timerDisplay) {
                        timerDisplay.textContent = '00:00';
                    }
                    if (logoutForm) {
                        logoutForm.submit();
                    } else {
                        window.location.href = '/Account/Login';
                    }
                    return;
                }

                const totalSeconds = Math.floor(remainingMs / 1000);
                const minutes = String(Math.floor(totalSeconds / 60)).padStart(2, '0');
                const seconds = String(totalSeconds % 60).padStart(2, '0');
                if (timerDisplay) {
                    timerDisplay.textContent = `${minutes}:${seconds}`;
                }
            };

            updateTimer();
            const intervalId = setInterval(updateTimer, 1000);
        })();
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>
