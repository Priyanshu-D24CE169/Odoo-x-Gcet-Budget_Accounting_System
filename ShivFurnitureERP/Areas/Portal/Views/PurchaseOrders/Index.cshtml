@using System.Linq
@using ShivFurnitureERP.Models
@model List<PurchaseOrder>
@{
    ViewData["Title"] = "My Purchase Orders";
    ViewData["PortalFullBleed"] = true;
}

<section class="portal-ledger-page">
    <div class="container-fluid">
        <div class="portal-ledger-hero">
            <div>
                <div class="portal-ledger-eyebrow">Vendor Workspace</div>
                <h1>Purchase Orders</h1>
                <p>Track every ordered item, confirm receipts, and keep vendor collaboration tidy.</p>
            </div>
        </div>

        <div class="portal-ledger-card">
            @if (!Model.Any())
            {
                <div class="portal-ledger-empty">
                    <div class="portal-ledger-pill">No Purchase Orders</div>
                    <p class="portal-ledger-note">Your vendor orders will show up here as soon as the admin team drafts them.</p>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="portal-ledger-table align-middle mb-0">
                        <thead>
                            <tr>
                                <th>PO Number</th>
                                <th>PO Date</th>
                                <th>Reference</th>
                                <th>Status</th>
                                <th class="text-end">Total Amount</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in Model.OrderByDescending(o => o.PODate))
                            {
                                var totalAmount = order.Lines.Sum(l => l.Total);
                                var statusClass = order.Status switch
                                {
                                    PurchaseOrderStatus.Confirmed => "is-confirmed",
                                    PurchaseOrderStatus.Cancelled => "is-cancelled",
                                    _ => "is-draft"
                                };
                                <tr>
                                    <td class="portal-ledger-figure">@order.PONumber</td>
                                    <td>@order.PODate.ToString("dd MMM yyyy")</td>
                                    <td>@(string.IsNullOrWhiteSpace(order.Reference) ? "-" : order.Reference)</td>
                                    <td>
                                        <span class="portal-ledger-badge @statusClass">@order.Status</span>
                                    </td>
                                    <td class="text-end portal-ledger-figure">@totalAmount.ToString("N2")</td>
                                    <td class="text-end">
                                        <a asp-action="Details" asp-route-id="@order.PurchaseOrderId" class="portal-ledger-btn">
                                            View Details
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</section>

