@using System.Linq
@using ShivFurnitureERP.Models
@model ShivFurnitureERP.ViewModels.PortalInvoices.PortalCustomerInvoiceDetailsViewModel
@{
    ViewData["Title"] = $"Invoice {Model.InvoiceNumber}";
    Layout = "~/Areas/Portal/Views/Shared/_PortalLayout.cshtml";
}

<section class="py-4">
    <div class="d-flex justify-content-between align-items-center flex-wrap gap-2 mb-3">
        <div>
            <h2 class="mb-0">Invoice <span class="text-muted">@Model.InvoiceNumber</span></h2>
            <p class="text-muted mb-0">@Model.CustomerName</p>
        </div>
        <div>
            <a asp-action="Index" class="btn btn-outline-secondary">Back to list</a>
        </div>
    </div>

    @if (TempData["StatusMessage"] is string alertMessage)
    {
        <div class="alert alert-success">@alertMessage</div>
    }

    <div class="row g-4 mb-4">
        <div class="col-lg-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title">Invoice Info</h5>
                    <dl class="row mb-0">
                        <dt class="col-5">Invoice Date</dt>
                        <dd class="col-7">@Model.InvoiceDate.ToString("dd MMM yyyy")</dd>
                        <dt class="col-5">Due Date</dt>
                        <dd class="col-7">@Model.DueDate.ToString("dd MMM yyyy")</dd>
                        <dt class="col-5">Status</dt>
                        <dd class="col-7">@Model.Status</dd>
                        <dt class="col-5">Payment</dt>
                        <dd class="col-7">@Model.PaymentStatus</dd>
                    </dl>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title">Amount Summary</h5>
                    <div class="row text-center">
                        <div class="col">
                            <p class="text-muted mb-1">Total</p>
                            <p class="h4 mb-0">@Model.TotalAmount.ToString("N2")</p>
                        </div>
                        <div class="col">
                            <p class="text-muted mb-1">Paid</p>
                            <p class="h4 text-success mb-0">@Model.AmountPaid.ToString("N2")</p>
                        </div>
                        <div class="col">
                            <p class="text-muted mb-1">Due</p>
                            <p class="h4 text-danger mb-0">@Model.AmountDue.ToString("N2")</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title">Payments</h5>
                    @if (!Model.Payments.Any())
                    {
                        <p class="text-muted mb-0">No payments recorded yet.</p>
                    }
                    else
                    {
                        <ul class="list-group list-group-flush">
                            @foreach (var payment in Model.Payments)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <div>
                                        <div class="fw-semibold">@payment.PaymentNumber</div>
                                        <small class="text-muted">@payment.PaymentDate.ToString("dd MMM yyyy") (@payment.PaymentMode)</small>
                                    </div>
                                    <span class="fw-semibold">@payment.Amount.ToString("N2")</span>
                                </li>
                            }
                        </ul>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <h5 class="card-title">Invoice Lines</h5>
            <div class="table-responsive">
                <table class="table table-bordered align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Product</th>
                            <th style="width:120px;">Qty</th>
                            <th style="width:140px;">Unit Price</th>
                            <th class="text-end" style="width:160px;">Line Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var line in Model.Lines)
                        {
                            <tr>
                                <td>@line.ProductName</td>
                                <td>@line.Quantity.ToString("N2")</td>
                                <td>@line.UnitPrice.ToString("N2")</td>
                                <td class="text-end fw-semibold">@line.Total.ToString("N2")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h5 class="card-title mb-0">Pay Online</h5>
                @if (!Model.CanRecordPayment)
                {
                    <span class="badge bg-secondary">Unavailable</span>
                }
            </div>
            @if (Model.CanRecordPayment && Model.PaymentForm is not null)
            {
                <form asp-action="Pay" method="post" class="row g-3">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="PaymentForm.CustomerInvoiceId" />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="col-md-6">
                        <label class="form-label">Payment Number</label>
                        <input class="form-control" value="@Model.PaymentForm.PaymentNumberPreview" readonly />
                    </div>
                    <div class="col-md-6">
                        <label asp-for="PaymentForm.PaymentDate" class="form-label"></label>
                        <input asp-for="PaymentForm.PaymentDate" class="form-control" type="date" />
                        <span asp-validation-for="PaymentForm.PaymentDate" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Customer</label>
                        <input class="form-control" value="@Model.PaymentForm.CustomerName" readonly />
                    </div>
                    <div class="col-md-6">
                        <label asp-for="PaymentForm.Amount" class="form-label"></label>
                        <input asp-for="PaymentForm.Amount" class="form-control" type="number" step="0.01" min="0" max="@Model.AmountDue" />
                        <span asp-validation-for="PaymentForm.Amount" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="PaymentForm.PaymentMode" class="form-label"></label>
                        <select asp-for="PaymentForm.PaymentMode" class="form-select">
                            <option value="@((int)PaymentMode.Online)">Online Gateway</option>
                        </select>
                    </div>
                    <div class="col-12">
                        <button type="submit" class="btn btn-primary">Pay Now</button>
                    </div>
                </form>
            }
            else
            {
                <p class="text-muted mb-0">This invoice is not available for payment. It might still be in draft or already fully paid.</p>
            }
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
