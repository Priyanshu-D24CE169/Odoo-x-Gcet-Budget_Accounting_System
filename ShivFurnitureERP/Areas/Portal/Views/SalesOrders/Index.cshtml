@using System.Linq
@using ShivFurnitureERP.Models
@model List<SalesOrder>
@{
    ViewData["Title"] = "My Sales Orders";
    ViewData["PortalFullBleed"] = true;
}

<section class="portal-ledger-page">
    <div class="container-fluid">
        <div class="portal-ledger-hero">
            <div>
                <div class="portal-ledger-eyebrow">Customer Workspace</div>
                <h1>Sales Orders</h1>
                <p>Review issued sales orders, confirm fulfillment, and stay synced with your vendor.</p>
            </div>
            <div class="portal-ledger-actions">
                <a asp-area="Portal" asp-controller="Dashboard" asp-action="Index">Dashboard</a>
                <a asp-area="Portal" asp-controller="SalesOrders" asp-action="Index" class="is-active">Sales Orders</a>
                <a asp-area="Portal" asp-controller="CustomerInvoices" asp-action="Index">Invoices</a>
            </div>
        </div>

        <div class="portal-ledger-card">
            @if (!Model.Any())
            {
                <div class="portal-ledger-empty">
                    <div class="portal-ledger-pill">No Sales Orders</div>
                    <p class="portal-ledger-note">When your first sales order is drafted it will appear in this list instantly.</p>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="portal-ledger-table align-middle mb-0">
                        <thead>
                            <tr>
                                <th>SO Number</th>
                                <th>SO Date</th>
                                <th>Reference</th>
                                <th>Status</th>
                                <th class="text-end">Total Amount</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in Model.OrderByDescending(o => o.SODate))
                            {
                                var totalAmount = order.Lines.Sum(l => l.Total);
                                var statusClass = order.Status switch
                                {
                                    SalesOrderStatus.Confirmed => "is-confirmed",
                                    SalesOrderStatus.Cancelled => "is-cancelled",
                                    _ => "is-draft"
                                };
                                <tr>
                                    <td class="portal-ledger-figure">@order.SONumber</td>
                                    <td>@order.SODate.ToString("dd MMM yyyy")</td>
                                    <td>@(string.IsNullOrWhiteSpace(order.Reference) ? "-" : order.Reference)</td>
                                    <td>
                                        <span class="portal-ledger-badge @statusClass">@order.Status</span>
                                    </td>
                                    <td class="text-end portal-ledger-figure">@totalAmount.ToString("N2")</td>
                                    <td class="text-end">
                                        <a asp-action="Details" asp-route-id="@order.SalesOrderId" class="portal-ledger-btn">
                                            View Details
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</section>

