@model ShivFurnitureERP.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Create Account";
    ViewData["PortalShowNav"] = false;
    Layout = "~/Areas/Portal/Views/Shared/_PortalLayout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/portal-auth.css" asp-append-version="true" />
}

<section class="portal-auth-page">
    <div class="portal-auth-shell">
        <div class="portal-auth-hero">
            <div class="portal-auth-eyebrow">User Master</div>
            <h1>Create Portal Account</h1>
            <p>Draft, confirm, and publish customer-facing profiles with the same polished experience across the suite.</p>
        </div>
        <div class="portal-auth-card">
            <div class="portal-auth-tabs">
                <a class="portal-auth-tab" asp-area="" asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl">Sign In</a>
                <span class="portal-auth-tab is-active">Create Account</span>
                <a class="portal-auth-tab" asp-controller="Home" asp-action="Index">Home</a>
            </div>
            <div class="portal-auth-form-wrapper">
                <form asp-area="Portal" asp-controller="Account" asp-action="Register" method="post" novalidate>
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="portal-auth-field">
                        <label asp-for="Email"></label>
                        <input asp-for="Email" autocomplete="email" />
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>

                    <div class="portal-auth-field">
                        <label asp-for="Password"></label>
                        <input asp-for="Password" autocomplete="new-password" />
                        <span asp-validation-for="Password" class="text-danger small"></span>
                    </div>

                    <div class="portal-auth-field">
                        <label asp-for="ConfirmPassword"></label>
                        <input asp-for="ConfirmPassword" autocomplete="new-password" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                    </div>

                    <input type="hidden" asp-for="ReturnUrl" />

                    <div class="portal-auth-actions">
                        <a class="portal-auth-secondary" asp-area="" asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl">Cancel</a>
                        <button type="submit" class="portal-auth-primary">Create Account</button>
                    </div>
                </form>
            </div>
            <div class="portal-auth-meta">
                Already onboarded? <a class="portal-auth-link" asp-area="" asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl">Sign in</a> to continue where you left off.
            </div>
            <div class="portal-auth-info mt-3">
                Admin accounts provide full access. Portal accounts let vendors/customers review orders, invoices, bills, and pay pending invoices.
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
