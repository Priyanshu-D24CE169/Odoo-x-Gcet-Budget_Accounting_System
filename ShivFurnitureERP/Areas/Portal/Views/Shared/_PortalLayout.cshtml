<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - User Portal</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/portal-ledger.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ShivFurnitureERP.styles.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)
</head>
@{
    var portalFullBleed = ViewData["PortalFullBleed"] as bool?;
    var portalShowNav = ViewData["PortalShowNav"] as bool?;
    var isFullBleed = portalFullBleed ?? true;
    var showNav = portalShowNav ?? true;
}

<body class="bg-white">
    @if (showNav)
    {
        <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="Portal" asp-controller="Dashboard" asp-action="Index">User Portal</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#portalNav" aria-controls="portalNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="portalNav">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Portal" asp-controller="Dashboard" asp-action="Index">Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Portal" asp-controller="Contacts" asp-action="Index">My Contact</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Portal" asp-controller="CustomerInvoices" asp-action="Index">Invoices</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Portal" asp-controller="SalesOrders" asp-action="Index">Sales Orders</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Portal" asp-controller="PurchaseOrders" asp-action="Index">Purchase Orders</a>
                    </li>
                </ul>
                @if (User.Identity?.IsAuthenticated == true)
                {
                    var rawName = User.Identity?.Name;
                    var displayName = string.IsNullOrWhiteSpace(rawName) ? "User" : rawName!.Trim();
                    var avatarInitial = displayName[0].ToString().ToUpperInvariant();
                    <div class="d-flex align-items-center gap-3 ms-lg-3">
                        <div class="dropdown user-menu">
                        <button class="btn btn-link text-decoration-none p-0 d-flex align-items-center gap-2" type="button" data-bs-toggle="dropdown" data-bs-auto-close="outside" aria-expanded="false">
                            <span class="avatar-placeholder">@avatarInitial</span>
                            <span class="fw-semibold small text-dark">@displayName</span>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end shadow-sm border-0 mt-2">
                            <li>
                                <a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Profile">View Profile</a>
                            </li>
                            <li><hr class="dropdown-divider" /></li>
                            <li>
                                <form asp-area="Portal" asp-controller="Account" asp-action="Logout" method="post" class="m-0">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="dropdown-item text-danger">Sign Out</button>
                                </form>
                            </li>
                        </ul>
                        </div>
                    </div>
                }
                else
                {
                    <div class="d-flex gap-2">
                        <a class="btn btn-outline-secondary btn-sm" asp-area="Portal" asp-controller="Account" asp-action="Register">Sign Up</a>
                        <a class="btn btn-primary btn-sm" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
                    </div>
                }
            </div>
        </div>
    </nav>
    }
    <main role="main" class="portal-main">
        @if (isFullBleed)
        {
            @RenderBody()
        }
        else
        {
            <div class="container py-4">
                @RenderBody()
            </div>
        }
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
