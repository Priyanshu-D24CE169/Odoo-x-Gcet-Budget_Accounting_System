@model ShivFurnitureERP.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Sign in";
}

<section class="row justify-content-center py-5">
    <div class="col-md-6 col-lg-4">
        <div class="card shadow-sm">
            <div class="card-body">
                <h2 class="h4 text-center mb-2">Welcome back</h2>
                <p class="text-muted text-center mb-4">Use your ShivFurniture credentials and we'll route you to the right workspace.</p>
                <form asp-controller="Account" asp-action="Login" method="post" novalidate>
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="mb-3">
                        <label asp-for="LoginId" class="form-label"></label>
                        <input asp-for="LoginId" class="form-control" autocomplete="username" />
                        <span asp-validation-for="LoginId" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label"></label>
                        <input asp-for="Password" class="form-control" autocomplete="current-password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-check mb-3">
                        <input asp-for="RememberMe" class="form-check-input" />
                        <label asp-for="RememberMe" class="form-check-label"></label>
                    </div>

                    <input type="hidden" asp-for="ReturnUrl" />

                    <button type="submit" class="btn btn-primary w-100">Sign in</button>
                </form>
                <p class="text-center text-muted mt-3 mb-0">
                    Need a portal account?
                    <a asp-area="Portal" asp-controller="Account" asp-action="Register" asp-route-returnUrl="@Model.ReturnUrl">Sign up</a>
                </p>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
