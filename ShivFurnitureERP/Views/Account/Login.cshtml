@model ShivFurnitureERP.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Sign in";
    ViewData["HidePublicNav"] = true;
    ViewData["FullScreenBody"] = true;
}

@section Styles {
    <link rel="stylesheet" href="~/css/portal-auth.css" asp-append-version="true" />
}

<section class="portal-auth-page">
    <div class="portal-auth-shell">
        <div class="portal-auth-hero">
            <div class="portal-auth-eyebrow">Secure Access</div>
            <h1>Welcome back</h1>
            <p>Use your ShivFurniture credentials and we'll route you to the right workspace.</p>
        </div>
        <div class="portal-auth-card">
            <div class="portal-auth-tabs">
                <span class="portal-auth-tab is-active">Sign In</span>
                <a class="portal-auth-tab" asp-area="Portal" asp-controller="Account" asp-action="Register" asp-route-returnUrl="@Model.ReturnUrl">Create Account</a>
                <a class="portal-auth-tab" asp-controller="Home" asp-action="Index">Home</a>
            </div>
            <div class="portal-auth-form-wrapper">
                <form asp-controller="Account" asp-action="Login" method="post" novalidate>
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="portal-auth-field">
                        <label asp-for="LoginId"></label>
                        <input asp-for="LoginId" autocomplete="username" />
                        <span asp-validation-for="LoginId" class="text-danger small"></span>
                    </div>

                    <div class="portal-auth-field">
                        <label asp-for="Password"></label>
                        <input asp-for="Password" autocomplete="current-password" />
                        <span asp-validation-for="Password" class="text-danger small"></span>
                    </div>

                    <div class="form-check mb-3">
                        <input asp-for="RememberMe" class="form-check-input" />
                        <label asp-for="RememberMe" class="form-check-label"></label>
                    </div>

                    <input type="hidden" asp-for="ReturnUrl" />

                    <div class="portal-auth-actions">
                        <button type="submit" class="portal-auth-primary">Sign In</button>
                    </div>
                </form>
            </div>
            <div class="portal-auth-meta">
                Need a dedicated portal login? <a class="portal-auth-link" asp-area="Portal" asp-controller="Account" asp-action="Register" asp-route-returnUrl="@Model.ReturnUrl">Create an account</a>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
