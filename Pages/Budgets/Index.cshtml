@page
@model Budget_Accounting_System.Pages.Budgets.IndexModel
@{
    ViewData["Title"] = "Budgets";
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col-md-8">
            <h2>Budget - List View</h2>
        </div>
        <div class="col-md-4 text-end">
            <a asp-page="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> New
            </a>
        </div>
    </div>

    <!-- Filter by Period and Type -->
    <div class="row mb-3">
        <div class="col-md-4">
            <form method="get">
                <div class="input-group">
                    <input type="month" name="filterPeriod" class="form-control" value="@Model.FilterPeriod" />
                    <button class="btn btn-outline-secondary" type="submit">Filter</button>
                </div>
            </form>
        </div>
        <div class="col-md-4">
            <form method="get" class="d-flex">
                <select name="filterType" class="form-select me-2" onchange="this.form.submit()">
                    <option value="">All Types</option>
                    <option value="Income" selected="@(Model.FilterType == "Income")">Income</option>
                    <option value="Expense" selected="@(Model.FilterType == "Expense")">Expense</option>
                </select>
            </form>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Budget Name</th>
                            <th>Start Date</th>
                            <th>End Date</th>
                            <th>Analytical Account</th>
                            <th>Type</th>
                            <th>Planned Amount</th>
                            <th>Status</th>
                            <th>Pie Chart</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var budget in Model.Budgets)
                        {
                            <tr>
                                <td>
                                    <strong>@budget.Name</strong>
                                    @if (budget.Revisions.Any())
                                    {
                                        <br/><small class="text-muted">(@budget.Revisions.Count revision(s))</small>
                                    }
                                </td>
                                <td>@budget.StartDate.ToString("dd/MM/yyyy")</td>
                                <td>@budget.EndDate.ToString("dd/MM/yyyy")</td>
                                <td>
                                    <span class="badge bg-secondary">@budget.AnalyticalAccount.Name</span>
                                </td>
                                <td>
                                    @if (budget.Type == BudgetType.Income)
                                    {
                                        <span class="badge bg-success">Income</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning">Expense</span>
                                    }
                                </td>
                                <td>@budget.PlannedAmount.ToString("C")</td>
                                <td>
                                    @if (budget.IsActive)
                                    {
                                        <span class="badge bg-success">Confirmed</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Archived</span>
                                    }
                                </td>
                                <td>
                                    <a asp-page="Details" asp-route-id="@budget.Id" title="View Pie Chart">
                                        <i class="bi bi-pie-chart-fill" style="font-size: 1.5rem; color: #0d6efd;"></i>
                                    </a>
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-page="Details" asp-route-id="@budget.Id" class="btn btn-sm btn-info">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-page="Edit" asp-route-id="@budget.Id" class="btn btn-sm btn-warning">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        @if (budget.IsActive)
                                        {
                                            <a asp-page="Revise" asp-route-id="@budget.Id" class="btn btn-sm btn-primary" title="Revise Budget">
                                                <i class="bi bi-arrow-clockwise"></i>
                                            </a>
                                            <a asp-page="Archive" asp-route-id="@budget.Id" class="btn btn-sm btn-secondary">
                                                <i class="bi bi-archive"></i>
                                            </a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (!Model.Budgets.Any())
            {
                <div class="text-center text-muted py-5">
                    <h5>No budgets found</h5>
                    <p>Click "New" to create your first budget.</p>
                </div>
            }
        </div>
    </div>
</div>
