@page
@model Budget_Accounting_System.Pages.Budgets.EditModel
@{
    ViewData["Title"] = "Edit Budget";
}

<div class="container">
    <div class="row">
        <div class="col-md-10 offset-md-1">
            <div class="card">
                <div class="card-header">
                    <ul class="nav nav-tabs card-header-tabs">
                        <li class="nav-item">
                            <a class="nav-link disabled">New</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="#">Confirm</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link disabled">Revise</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link disabled">Archived</a>
                        </li>
                        <li class="nav-item ms-auto">
                            <span class="nav-link text-success">Confirmed</span>
                        </li>
                        <li class="nav-item">
                            <a asp-page="Index" class="nav-link">Back</a>
                        </li>
                    </ul>
                </div>
                <div class="card-body">
                    <h4 class="card-title mb-4">Budget - Edit</h4>

                    <form method="post">
                        <input type="hidden" asp-for="Budget.Id" />
                        <input type="hidden" asp-for="Budget.CreatedDate" />
                        
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="row">
                            <div class="col-md-8">
                                <div class="mb-3">
                                    <label asp-for="Budget.Name" class="form-label">Budget Name</label>
                                    <input asp-for="Budget.Name" class="form-control" />
                                    <span asp-validation-for="Budget.Name" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="Budget.Type" class="form-label">Type</label>
                                    <select asp-for="Budget.Type" class="form-select" asp-items="Html.GetEnumSelectList<BudgetType>()">
                                    </select>
                                    <span asp-validation-for="Budget.Type" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Start Date</label>
                                    <input asp-for="Budget.StartDate" type="date" class="form-control" />
                                    <span asp-validation-for="Budget.StartDate" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">End Date</label>
                                    <input asp-for="Budget.EndDate" type="date" class="form-control" />
                                    <span asp-validation-for="Budget.EndDate" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Budget.AnalyticalAccountId" class="form-label">Analytical Account</label>
                            <select asp-for="Budget.AnalyticalAccountId" class="form-select">
                                @foreach (var account in Model.AnalyticalAccounts)
                                {
                                    <option value="@account.Id">@account.Code - @account.Name</option>
                                }
                            </select>
                            <span asp-validation-for="Budget.AnalyticalAccountId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Budget.PlannedAmount" class="form-label">Budgeted Amount</label>
                            <input asp-for="Budget.PlannedAmount" type="number" step="0.01" class="form-control" />
                            <span asp-validation-for="Budget.PlannedAmount" class="text-danger"></span>
                            <small class="text-warning">
                                <strong>Note:</strong> To change the budgeted amount, please use the "Revise" function to maintain audit trail.
                            </small>
                        </div>

                        <div class="mb-3 form-check">
                            <input asp-for="Budget.IsActive" class="form-check-input" />
                            <label asp-for="Budget.IsActive" class="form-check-label">Active</label>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-page="Index" class="btn btn-secondary">Cancel</a>
                            <button type="submit" class="btn btn-primary">Update</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
