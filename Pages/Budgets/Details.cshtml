@page
@model Budget_Accounting_System.Pages.Budgets.DetailsModel
@{
    ViewData["Title"] = "Budget Details";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <ul class="nav nav-tabs card-header-tabs">
                        <li class="nav-item">
                            <a class="nav-link disabled">New</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="#">Confirm</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link disabled">Revise</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link disabled">Archived</a>
                        </li>
                        <li class="nav-item ms-auto">
                            @if (Model.Budget.Revisions.Any())
                            {
                                <span class="nav-link text-primary">Revised</span>
                            }
                            else
                            {
                                <span class="nav-link text-success">Confirmed</span>
                            }
                        </li>
                        <li class="nav-item">
                            <a asp-page="Index" class="nav-link">Back</a>
                        </li>
                    </ul>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h4 class="card-title mb-0">Budget - Form View of Original Budget</h4>
                        <div>
                            <a asp-page="Edit" asp-route-id="@Model.Budget.Id" class="btn btn-warning">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            @if (Model.Budget.IsActive)
                            {
                                <a asp-page="Revise" asp-route-id="@Model.Budget.Id" class="btn btn-primary">
                                    <i class="bi bi-arrow-clockwise"></i> Revise
                                </a>
                            }
                        </div>
                    </div>

                    <!-- Budget Header Info -->
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4">Budget Name</dt>
                                <dd class="col-sm-8"><strong>@Model.Budget.Name</strong></dd>

                                <dt class="col-sm-4">Budget Period</dt>
                                <dd class="col-sm-8">
                                    @Model.Budget.StartDate.ToString("dd/MM/yyyy") <strong>To</strong> @Model.Budget.EndDate.ToString("dd/MM/yyyy")
                                </dd>

                                <dt class="col-sm-4">Analytic Name</dt>
                                <dd class="col-sm-8">
                                    <span class="badge bg-secondary">@Model.Budget.AnalyticalAccount.Code - @Model.Budget.AnalyticalAccount.Name</span>
                                </dd>

                                <dt class="col-sm-4">Type</dt>
                                <dd class="col-sm-8">
                                    @if (Model.Budget.Type == BudgetType.Income)
                                    {
                                        <span class="badge bg-success">Income</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning">Expense</span>
                                    }
                                </dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <!-- Pie Chart Visualization -->
                            <div class="text-center">
                                <h5>Budget Achievement</h5>
                                <canvas id="budgetChart" width="200" height="200"></canvas>
                                <p class="mt-2">
                                    <strong>@Model.AchievementPercentage.ToString("F1")%</strong> Achieved
                                </p>
                            </div>
                        </div>
                    </div>

                    <!-- Budget Details Table -->
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead class="table-light">
                                <tr>
                                    <th>Analytic Name</th>
                                    <th>Type</th>
                                    <th>Budgeted Amount</th>
                                    <th>Achieved Amount</th>
                                    <th>Achieved %</th>
                                    <th>Amount to Achieve</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>@Model.Budget.AnalyticalAccount.Name</td>
                                    <td>@Model.Budget.Type</td>
                                    <td class="text-end">
                                        <strong>@Model.Budget.PlannedAmount.ToString("C")</strong>
                                    </td>
                                    <td class="text-end">
                                        @if (Model.Budget.IsActive)
                                        {
                                            <span class="text-primary">@Model.AchievedAmount.ToString("C")</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">N/A (Archived)</span>
                                        }
                                    </td>
                                    <td class="text-end">
                                        @if (Model.Budget.IsActive)
                                        {
                                            <strong class="@(Model.AchievementPercentage >= 90 ? "text-danger" : Model.AchievementPercentage >= 70 ? "text-warning" : "text-success")">
                                                @Model.AchievementPercentage.ToString("F1")%
                                            </strong>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td class="text-end">
                                        @if (Model.Budget.IsActive)
                                        {
                                            var remaining = Model.Budget.PlannedAmount - Model.AchievedAmount;
                                            <span class="@(remaining < 0 ? "text-danger" : "text-success")">
                                                @remaining.ToString("C")
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        <button type="button" class="btn btn-sm btn-outline-primary" data-bs-toggle="modal" data-bs-target="#detailsModal">
                                            View
                                        </button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    <!-- Achieved Amount Calculation Info -->
                    @if (Model.Budget.IsActive)
                    {
                        <div class="alert alert-info mt-3">
                            <strong>Achieved Amount Calculation:</strong><br/>
                            Only Visible for Confirmed Budget. Considering above <strong>@Model.Budget.AnalyticalAccount.Name</strong> Analytical Example:<br/>
                            Search Analytical in <strong>@(Model.Budget.Type == BudgetType.Income ? "Sales Invoice" : "Vendor Bills")</strong> 
                            with name <strong>@Model.Budget.AnalyticalAccount.Name</strong> 
                            consider <strong>budget period</strong> and <strong>compute total</strong> and set in achieved amount.<br/>
                            <strong>Budget Period:</strong> @Model.Budget.StartDate.ToString("dd/MM/yyyy") to @Model.Budget.EndDate.ToString("dd/MM/yyyy")
                        </div>
                    }

                    <!-- Budget Revisions -->
                    @if (Model.Budget.Revisions.Any())
                    {
                        <hr class="my-4" />
                        <h5>Budget Revisions</h5>
                        <p class="text-muted">
                            On clicking of Revise - New Budget will appear and old one will move to revised state.<br/>
                            Link will be visible in main budget, on click it will lead to new revision budget.<br/>
                            No revision to original link.
                        </p>
                        <div class="table-responsive">
                            <table class="table table-sm table-striped">
                                <thead>
                                    <tr>
                                        <th>Revision Date</th>
                                        <th>Old Amount</th>
                                        <th>New Amount</th>
                                        <th>Change</th>
                                        <th>Reason</th>
                                        <th>Revised By</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var revision in Model.Budget.Revisions.OrderByDescending(r => r.RevisionDate))
                                    {
                                        <tr>
                                            <td>@revision.RevisionDate.ToString("dd MMM yyyy HH:mm")</td>
                                            <td>@revision.OldAmount.ToString("C")</td>
                                            <td>@revision.NewAmount.ToString("C")</td>
                                            <td>
                                                @{
                                                    var change = revision.NewAmount - revision.OldAmount;
                                                    var changeClass = change >= 0 ? "text-success" : "text-danger";
                                                }
                                                <span class="@changeClass">
                                                    @(change >= 0 ? "+" : "")@change.ToString("C")
                                                </span>
                                            </td>
                                            <td>@revision.Reason</td>
                                            <td>@(revision.RevisedBy ?? "System")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Details Modal -->
<div class="modal fade" id="detailsModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Achieved Amount - View Button</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Clicking on View button open list view of all invoice/bill lines having same analytical for the budget period.</p>
                <p><strong>Invoice/Bill/PO Number, date, Amount</strong></p>
                <p class="text-muted">This shows all @(Model.Budget.Type == BudgetType.Income ? "Sales Invoices" : "Vendor Bills") 
                linked to <strong>@Model.Budget.AnalyticalAccount.Name</strong> 
                for the period @Model.Budget.StartDate.ToString("dd/MM/yyyy") to @Model.Budget.EndDate.ToString("dd/MM/yyyy")</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        const ctx = document.getElementById('budgetChart');
        const achievedAmount = @Model.AchievedAmount;
        const plannedAmount = @Model.Budget.PlannedAmount;
        const remainingAmount = Math.max(0, plannedAmount - achievedAmount);
        
        new Chart(ctx, {
            type: 'pie',
            data: {
                labels: ['Achieved', 'Remaining'],
                datasets: [{
                    data: [achievedAmount, remainingAmount],
                    backgroundColor: [
                        'rgba(13, 110, 253, 0.8)',
                        'rgba(220, 53, 69, 0.3)'
                    ],
                    borderColor: [
                        'rgba(13, 110, 253, 1)',
                        'rgba(220, 53, 69, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        position: 'bottom',
                    },
                    tooltip: {
                        callbacks: {
                            label: function(context) {
                                let label = context.label || '';
                                if (label) {
                                    label += ': ';
                                }
                                label += new Intl.NumberFormat('en-US', {
                                    style: 'currency',
                                    currency: 'USD'
                                }).format(context.parsed);
                                return label;
                            }
                        }
                    }
                }
            }
        });
    </script>
}
