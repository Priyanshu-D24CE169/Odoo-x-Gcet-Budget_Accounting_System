@page
@model Budget_Accounting_System.Pages.Account.AccessDeniedModel
@{
    ViewData["Title"] = "Access Denied";
}

<div class="row justify-content-center">
    <div class="col-md-6 text-center">
        <div class="card shadow-lg">
            <div class="card-body p-5">
                <i class="bi bi-shield-x display-1 text-danger"></i>
                <h2 class="mt-4">Access Denied</h2>
                <p class="text-muted mt-3">
                    You don't have permission to access this page.
                </p>
                <p class="text-muted">
                    If you believe this is an error, please contact your administrator.
                </p>
                <div class="mt-4">
                    <a asp-page="/Index" class="btn btn-primary">
                        <i class="bi bi-house"></i> Go to Home
                    </a>
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <form asp-page="/Account/Logout" method="post" class="d-inline">
                            <button type="submit" class="btn btn-outline-danger">
                                <i class="bi bi-box-arrow-right"></i> Logout
                            </button>
                        </form>
                    }
                    else
                    {
                        <a asp-page="/Account/Login" class="btn btn-outline-primary">
                            <i class="bi bi-box-arrow-in-right"></i> Login
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
