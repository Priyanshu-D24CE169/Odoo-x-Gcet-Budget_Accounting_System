@page
@model Budget_Accounting_System.Pages.CustomerInvoices.CreateModel
@{
    ViewData["Title"] = "Create Customer Invoice";
}

<div class="row mb-3">
    <div class="col-12">
        <h1 class="display-6">
            <i class="bi bi-file-earmark-plus text-success"></i> Create Customer Invoice
        </h1>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-page="/Index">Dashboard</a></li>
                <li class="breadcrumb-item"><a asp-page="./Index">Customer Invoices</a></li>
                <li class="breadcrumb-item active">Create</li>
            </ol>
        </nav>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card shadow-sm">
    <div class="card-header bg-success text-white">
        <h5 class="mb-0"><i class="bi bi-file-earmark-text"></i> Invoice Information</h5>
    </div>
    <div class="card-body">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="Input.CustomerId" class="form-label fw-semibold">Customer *</label>
                    <select asp-for="Input.CustomerId" class="form-select" required>
                        <option value="">-- Select Customer --</option>
                        @foreach (var customer in Model.Customers)
                        {
                            <option value="@customer.Id">@customer.Name</option>
                        }
                    </select>
                    <span asp-validation-for="Input.CustomerId" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Input.SalesOrderId" class="form-label fw-semibold">Sales Order (Optional)</label>
                    <select asp-for="Input.SalesOrderId" class="form-select">
                        <option value="">-- None --</option>
                        @foreach (var so in Model.SalesOrders)
                        {
                            <option value="@so.Id">@so.SONumber</option>
                        }
                    </select>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-4">
                    <label asp-for="Input.InvoiceNumber" class="form-label fw-semibold">Invoice Number *</label>
                    <input asp-for="Input.InvoiceNumber" class="form-control" readonly style="background-color: #f8f9fa;" />
                    <span asp-validation-for="Input.InvoiceNumber" class="text-danger small"></span>
                </div>

                <div class="col-md-4">
                    <label asp-for="Input.InvoiceDate" class="form-label fw-semibold">Invoice Date *</label>
                    <input asp-for="Input.InvoiceDate" type="date" class="form-control" />
                    <span asp-validation-for="Input.InvoiceDate" class="text-danger small"></span>
                </div>

                <div class="col-md-4">
                    <label asp-for="Input.DueDate" class="form-label fw-semibold">Due Date *</label>
                    <input asp-for="Input.DueDate" type="date" class="form-control" />
                    <span asp-validation-for="Input.DueDate" class="text-danger small"></span>
                </div>
            </div>

            <div class="row mb-4">
                <div class="col-md-6">
                    <label asp-for="Input.Reference" class="form-label fw-semibold">Reference</label>
                    <input asp-for="Input.Reference" class="form-control" placeholder="Order reference, PO number, etc." />
                </div>

                <div class="col-md-6">
                    <label asp-for="Input.Notes" class="form-label fw-semibold">Notes</label>
                    <textarea asp-for="Input.Notes" class="form-control" rows="2" placeholder="Additional notes"></textarea>
                </div>
            </div>

            <hr class="my-4" />

            <h5 class="mb-3"><i class="bi bi-list-ul"></i> Invoice Lines</h5>
            
            <div class="alert alert-info">
                <i class="bi bi-info-circle"></i> Add product lines using the dynamic line entry below. Use JavaScript to add/remove lines as needed.
            </div>

            <div class="mb-3">
                <button type="button" class="btn btn-primary btn-sm" onclick="addLine()">
                    <i class="bi bi-plus-circle"></i> Add Product Line
                </button>
            </div>

            <div class="table-responsive">
                <table class="table table-bordered" id="linesTable">
                    <thead class="table-light">
                        <tr>
                            <th style="width: 30%;">Product *</th>
                            <th style="width: 15%;">Quantity *</th>
                            <th style="width: 15%;">Unit Price *</th>
                            <th style="width: 15%;">Amount</th>
                            <th style="width: 20%;">Analytics</th>
                            <th style="width: 5%;"></th>
                        </tr>
                    </thead>
                    <tbody id="linesBody">
                        <!-- Lines added via JavaScript -->
                    </tbody>
                    <tfoot>
                        <tr class="table-success">
                            <td colspan="3" class="text-end fw-bold">Total:</td>
                            <td id="grandTotal" class="fw-bold">?0.00</td>
                            <td colspan="2"></td>
                        </tr>
                    </tfoot>
                </table>
            </div>

            <hr class="my-4" />

            <div class="d-flex justify-content-between">
                <a asp-page="./Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-check-circle"></i> Create Invoice
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <script>
        let lineIndex = 0;
        const products = @Html.Raw(Json.Serialize(Model.Products.Select(p => new { 
            id = p.Id, 
            name = p.Name, 
            unitPrice = p.UnitPrice 
        })));
        
        const analyticalAccounts = @Html.Raw(Json.Serialize(Model.AnalyticalAccounts.Select(a => new { 
            id = a.Id, 
            code = a.Code,
            name = a.Name 
        })));

        function addLine() {
            const tbody = document.getElementById('linesBody');
            const row = document.createElement('tr');
            row.id = `line_${lineIndex}`;
            
            row.innerHTML = `
                <td>
                    <select name="Input.Lines[${lineIndex}].ProductId" class="form-select form-select-sm" 
                            onchange="updatePrice(${lineIndex})" required>
                        <option value="">-- Select --</option>
                        ${products.map(p => `<option value="${p.id}">${p.name}</option>`).join('')}
                    </select>
                </td>
                <td>
                    <input type="text" name="Input.Lines[${lineIndex}].Description" 
                           class="form-control form-control-sm" placeholder="Description" />
                </td>
                <td>
                    <input type="number" name="Input.Lines[${lineIndex}].Quantity" 
                           class="form-control form-control-sm" value="1" step="0.01" min="0.01" 
                           onchange="calculateTotal(${lineIndex})" required />
                </td>
                <td>
                    <input type="number" name="Input.Lines[${lineIndex}].UnitPrice" 
                           class="form-control form-control-sm" value="0" step="0.01" min="0" 
                           onchange="calculateTotal(${lineIndex})" required />
                </td>
                <td>
                    <input type="text" class="form-control form-control-sm" id="amount_${lineIndex}" 
                           value="?0.00" readonly style="background: #f8f9fa;" />
                </td>
                <td>
                    <select name="Input.Lines[${lineIndex}].AnalyticalAccountId" class="form-select form-select-sm">
                        <option value="">-- None --</option>
                        ${analyticalAccounts.map(a => `<option value="${a.id}">${a.code}</option>`).join('')}
                    </select>
                </td>
                <td>
                    <button type="button" class="btn btn-danger btn-sm" onclick="removeLine(${lineIndex})">
                        <i class="bi bi-trash"></i>
                    </button>
                </td>
            `;
            
            tbody.appendChild(row);
            lineIndex++;
        }

        function updatePrice(index) {
            const row = document.getElementById(`line_${index}`);
            const productId = row.querySelector('select').value;
            const product = products.find(p => p.id == productId);
            
            if (product) {
                row.querySelectorAll('input')[1].value = product.unitPrice;
                calculateTotal(index);
            }
        }

        function calculateTotal(index) {
            const row = document.getElementById(`line_${index}`);
            const qty = parseFloat(row.querySelectorAll('input')[0].value) || 0;
            const price = parseFloat(row.querySelectorAll('input')[1].value) || 0;
            const amount = qty * price;
            
            document.getElementById(`amount_${index}`).value = `?${amount.toFixed(2)}`;
            calculateGrandTotal();
        }

        function calculateGrandTotal() {
            let total = 0;
            document.querySelectorAll('[id^="amount_"]').forEach(input => {
                total += parseFloat(input.value.replace('?', '')) || 0;
            });
            document.getElementById('grandTotal').textContent = `?${total.toFixed(2)}`;
        }

        function removeLine(index) {
            document.getElementById(`line_${index}`)?.remove();
            calculateGrandTotal();
        }

        // Initialize with one line
        document.addEventListener('DOMContentLoaded', function() {
            addLine();
        });
    </script>
}
