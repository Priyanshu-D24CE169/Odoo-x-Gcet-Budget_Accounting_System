@page
@model Budget_Accounting_System.Pages.VendorBills.DetailsModel
@{
    ViewData["Title"] = "Vendor Bill Details";
    var amountDue = Model.VendorBill.TotalAmount - Model.VendorBill.PaidAmount;
    var paymentStatus = amountDue == 0 ? "Paid" : 
                       amountDue < Model.VendorBill.TotalAmount ? "Partial" : "Not Paid";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">Vendor Bill - @Model.VendorBill.BillNumber</h4>
                    <div>
                        @if (Model.VendorBill.Status == BillStatus.Draft)
                        {
                            <span class="badge bg-secondary me-2">Draft</span>
                        }
                        else if (Model.VendorBill.Status == BillStatus.Posted)
                        {
                            <span class="badge bg-success me-2">Posted</span>
                        }
                        else
                        {
                            <span class="badge bg-danger me-2">Cancelled</span>
                        }

                        @if (paymentStatus == "Paid")
                        {
                            <span class="badge bg-success me-2">Paid</span>
                        }
                        else if (paymentStatus == "Partial")
                        {
                            <span class="badge bg-warning me-2">Partial</span>
                        }
                        else
                        {
                            <span class="badge bg-danger me-2">Not Paid</span>
                        }

                        <a asp-page="Index" class="btn btn-sm btn-outline-secondary">Back</a>
                        <a asp-page="Index" class="btn btn-sm btn-outline-secondary">Home</a>
                    </div>
                </div>
                <div class="card-body">
                    <!-- Header Info -->
                    <div class="row mb-4">
                        <div class="col-md-2">
                            <dl>
                                <dt>Bill No.</dt>
                                <dd><strong>@Model.VendorBill.BillNumber</strong></dd>
                            </dl>
                        </div>
                        <div class="col-md-2">
                            <dl>
                                <dt>Bill Date</dt>
                                <dd>@Model.VendorBill.BillDate.ToString("dd/MM/yyyy")</dd>
                            </dl>
                        </div>
                        <div class="col-md-2">
                            <dl>
                                <dt>Due Date</dt>
                                <dd>@Model.VendorBill.DueDate?.ToString("dd/MM/yyyy")</dd>
                            </dl>
                        </div>
                        <div class="col-md-4">
                            <dl>
                                <dt>Vendor Name</dt>
                                <dd>
                                    <a asp-page="/Contacts/Details" asp-route-id="@Model.VendorBill.VendorId">
                                        @Model.VendorBill.Vendor.Name
                                    </a>
                                </dd>
                            </dl>
                        </div>
                        <div class="col-md-2">
                            <dl>
                                <dt>Reference</dt>
                                <dd>@Model.VendorBill.Reference</dd>
                            </dl>
                        </div>
                    </div>

                    <!-- PO Link if exists -->
                    @if (Model.VendorBill.PurchaseOrder != null)
                    {
                        <div class="alert alert-info">
                            <strong>Created from Purchase Order:</strong>
                            <a asp-page="/PurchaseOrders/Details" asp-route-id="@Model.VendorBill.PurchaseOrderId">
                                @Model.VendorBill.PurchaseOrder.PONumber
                            </a>
                        </div>
                    }

                    <!-- Action Buttons -->
                    <div class="mb-3">
                        @if (Model.VendorBill.Status == BillStatus.Draft)
                        {
                            <form method="post" asp-page-handler="Confirm" asp-route-id="@Model.VendorBill.Id" style="display:inline;">
                                <button type="submit" class="btn btn-success">
                                    <i class="bi bi-check-circle"></i> Confirm
                                </button>
                            </form>
                            <a asp-page="Edit" asp-route-id="@Model.VendorBill.Id" class="btn btn-warning">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                        }
                        <button type="button" class="btn btn-outline-secondary" onclick="window.print()">
                            <i class="bi bi-printer"></i> Print
                        </button>
                        @if (Model.VendorBill.Status == BillStatus.Posted && amountDue > 0)
                        {
                            <a asp-page="Pay" asp-route-id="@Model.VendorBill.Id" class="btn btn-success">
                                <i class="bi bi-cash"></i> Pay
                            </a>
                        }
                        <button type="button" class="btn btn-outline-info" data-bs-toggle="modal" data-bs-target="#budgetModal">
                            <i class="bi bi-piggy-bank"></i> Budget
                        </button>
                    </div>

                    <!-- Line Items -->
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead class="table-light">
                                <tr>
                                    <th>Sr. No.</th>
                                    <th>Product</th>
                                    <th>Budget Analytics</th>
                                    <th>Qty</th>
                                    <th>Unit Price</th>
                                    <th>Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{int srNo = 1;}
                                @foreach (var line in Model.VendorBill.Lines)
                                {
                                    <tr class="@(Model.BudgetWarnings.ContainsKey(line.Id) ? "table-warning" : "")">
                                        <td>@srNo</td>
                                        <td>@line.Product.Name</td>
                                        <td>
                                            @if (line.AnalyticalAccount != null)
                                            {
                                                <span>@line.AnalyticalAccount.Code - @line.AnalyticalAccount.Name</span>
                                                @if (Model.BudgetWarnings.ContainsKey(line.Id))
                                                {
                                                    <div class="text-warning mt-1">
                                                        <i class="bi bi-exclamation-triangle"></i>
                                                        <small>@Model.BudgetWarnings[line.Id]</small>
                                                    </div>
                                                }
                                            }
                                            else
                                            {
                                                <span class="text-muted">Not assigned</span>
                                            }
                                        </td>
                                        <td>@line.Quantity</td>
                                        <td>@line.UnitPrice.ToString("C")</td>
                                        <td>@line.LineTotal.ToString("C")</td>
                                    </tr>
                                    srNo++;
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <td colspan="5" class="text-end"><strong>Total</strong></td>
                                    <td><strong>@Model.VendorBill.TotalAmount.ToString("C")</strong></td>
                                </tr>
                                <tr>
                                    <td colspan="5" class="text-end">Paid Via Cash</td>
                                    <td>@Model.PaidCash.ToString("C")</td>
                                </tr>
                                <tr>
                                    <td colspan="5" class="text-end">Paid Via Bank</td>
                                    <td>@Model.PaidBank.ToString("C")</td>
                                </tr>
                                <tr class="table-warning">
                                    <td colspan="5" class="text-end"><strong>Amount Due</strong></td>
                                    <td><strong class="@(amountDue > 0 ? "text-danger" : "text-success")">@amountDue.ToString("C")</strong></td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>

                    @if (Model.BudgetWarnings.Any())
                    {
                        <div class="alert alert-warning mt-3">
                            <h5><i class="bi bi-exclamation-triangle"></i> Exceeds Approved Budget</h5>
                            <p>Some line items exceed the approved budget. Orange-highlighted lines indicate budget overruns.</p>
                            <p><strong>Non Blocking Warning:</strong> This bill can still be confirmed, but review is recommended.</p>
                        </div>
                    }

                    <!-- Payment History -->
                    @if (Model.Payments.Any())
                    {
                        <h5 class="mt-4">Payment History</h5>
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Method</th>
                                    <th>Amount</th>
                                    <th>Reference</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var payment in Model.Payments)
                                {
                                    <tr>
                                        <td>@payment.PaymentDate.ToString("dd/MM/yyyy")</td>
                                        <td>
                                            @if (payment.Method == PaymentMethod.Cash)
                                            {
                                                <span class="badge bg-success">Cash</span>
                                            }
                                            else if (payment.Method == PaymentMethod.BankTransfer)
                                            {
                                                <span class="badge bg-primary">Bank</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-info">@payment.Method</span>
                                            }
                                        </td>
                                        <td>@payment.Amount.ToString("C")</td>
                                        <td>@payment.Reference</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Budget Modal -->
<div class="modal fade" id="budgetModal" tabindex="-1">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Budget Analytics Overview</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Shows budget status for all analytical accounts used in this bill.</p>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Analytical Account</th>
                            <th>Budget Name</th>
                            <th>Budgeted Amount</th>
                            <th>Spent Amount</th>
                            <th>This Bill</th>
                            <th>Remaining</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.BudgetInfo)
                        {
                            <tr>
                                <td>@item.Key</td>
                                <td>@item.Value.BudgetName</td>
                                <td>@item.Value.PlannedAmount.ToString("C")</td>
                                <td>@item.Value.SpentAmount.ToString("C")</td>
                                <td>@item.Value.ThisBillAmount.ToString("C")</td>
                                <td class="@(item.Value.Remaining < 0 ? "text-danger" : "text-success")">
                                    @item.Value.Remaining.ToString("C")
                                </td>
                                <td>
                                    @if (item.Value.Remaining < 0)
                                    {
                                        <span class="badge bg-danger">Over Budget</span>
                                    }
                                    else if (item.Value.Remaining < item.Value.PlannedAmount * 0.1m)
                                    {
                                        <span class="badge bg-warning">Critical</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">OK</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
