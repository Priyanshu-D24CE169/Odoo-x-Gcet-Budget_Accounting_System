@page
@model Budget_Accounting_System.Pages.Products.DetailsModel
@{
    ViewData["Title"] = "Product Details";
}

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    <ul class="nav nav-tabs card-header-tabs">
                        <li class="nav-item">
                            <a class="nav-link disabled">New</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="#">Confirm</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link disabled">Archived</a>
                        </li>
                        <li class="nav-item ms-auto">
                            <a asp-page="Index" class="nav-link">Back</a>
                        </li>
                    </ul>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h4 class="card-title mb-0">Product Details</h4>
                        <div>
                            <a asp-page="Edit" asp-route-id="@Model.Product.Id" class="btn btn-warning">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            @if (Model.Product.IsActive)
                            {
                                <a asp-page="Archive" asp-route-id="@Model.Product.Id" class="btn btn-secondary">
                                    <i class="bi bi-archive"></i> Archive
                                </a>
                            }
                        </div>
                    </div>

                    <dl class="row">
                        <dt class="col-sm-3">Name</dt>
                        <dd class="col-sm-9">@Model.Product.Name</dd>

                        <dt class="col-sm-3">Description</dt>
                        <dd class="col-sm-9">@Model.Product.Description</dd>

                        <dt class="col-sm-3">Category</dt>
                        <dd class="col-sm-9">
                            <span class="badge bg-primary">@Model.Product.Category</span>
                        </dd>

                        <dt class="col-sm-3">Unit Price</dt>
                        <dd class="col-sm-9">
                            <strong>@Model.Product.UnitPrice.ToString("C")</strong>
                        </dd>

                        <dt class="col-sm-3">Unit</dt>
                        <dd class="col-sm-9">@Model.Product.Unit</dd>

                        <dt class="col-sm-3">Status</dt>
                        <dd class="col-sm-9">
                            @if (Model.Product.IsActive)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Archived</span>
                            }
                        </dd>

                        <dt class="col-sm-3">Created Date</dt>
                        <dd class="col-sm-9">@Model.Product.CreatedDate.ToString("dd MMM yyyy HH:mm")</dd>

                        @if (Model.Product.ModifiedDate.HasValue)
                        {
                            <dt class="col-sm-3">Modified Date</dt>
                            <dd class="col-sm-9">@Model.Product.ModifiedDate.Value.ToString("dd MMM yyyy HH:mm")</dd>
                        }
                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>
