@page
@model Budget_Accounting_System.Pages.Products.CreateModel
@{
    ViewData["Title"] = "Create Product";
}

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    <ul class="nav nav-tabs card-header-tabs">
                        <li class="nav-item">
                            <a class="nav-link active" href="#">New</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link disabled">Confirm</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link disabled">Archived</a>
                        </li>
                        <li class="nav-item ms-auto">
                            <a asp-page="Index" class="nav-link">Back</a>
                        </li>
                    </ul>
                </div>
                <div class="card-body">
                    <h4 class="card-title mb-4">Product Master - New</h4>

                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="Product.Name" class="form-label"></label>
                            <input asp-for="Product.Name" class="form-control" placeholder="Enter product name" />
                            <span asp-validation-for="Product.Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Product.Description" class="form-label"></label>
                            <textarea asp-for="Product.Description" class="form-control" rows="2" placeholder="Product description"></textarea>
                            <span asp-validation-for="Product.Description" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Product.Category" class="form-label"></label>
                                    <input asp-for="Product.Category" class="form-control" placeholder="Wood, Furniture, Materials..." />
                                    <span asp-validation-for="Product.Category" class="text-danger"></span>
                                    <small class="text-muted">Categories can be created and saved on fly (Many 2 One field)</small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Product.Unit" class="form-label"></label>
                                    <input asp-for="Product.Unit" class="form-control" placeholder="Unit, Sq Ft, Gallon..." />
                                    <span asp-validation-for="Product.Unit" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Sales Price (Rs.)</label>
                                    <input asp-for="Product.UnitPrice" class="form-control" placeholder="22.20 Rs" />
                                    <span asp-validation-for="Product.UnitPrice" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Purchase Price (Rs.)</label>
                                    <input type="number" step="0.01" class="form-control" placeholder="18.00 Rs" />
                                    <small class="text-muted">Optional for this demo</small>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3 form-check">
                            <input asp-for="Product.IsActive" class="form-check-input" checked />
                            <label asp-for="Product.IsActive" class="form-check-label">Active</label>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-page="Index" class="btn btn-secondary">Cancel</a>
                            <button type="submit" class="btn btn-primary">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
