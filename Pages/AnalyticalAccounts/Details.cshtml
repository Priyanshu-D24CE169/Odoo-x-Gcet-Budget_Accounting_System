@page
@model Budget_Accounting_System.Pages.AnalyticalAccounts.DetailsModel
@{
    ViewData["Title"] = "Analytical Account Details";
}

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    <ul class="nav nav-tabs card-header-tabs">
                        <li class="nav-item">
                            <a class="nav-link disabled">New</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="#">Confirm</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link disabled">Archived</a>
                        </li>
                        <li class="nav-item ms-auto">
                            <a asp-page="Index" class="nav-link">Back</a>
                        </li>
                    </ul>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h4 class="card-title mb-0">Analytical Account Details</h4>
                        <div>
                            <a asp-page="Edit" asp-route-id="@Model.AnalyticalAccount.Id" class="btn btn-warning">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                        </div>
                    </div>

                    <dl class="row">
                        <dt class="col-sm-3">Code</dt>
                        <dd class="col-sm-9"><code>@Model.AnalyticalAccount.Code</code></dd>

                        <dt class="col-sm-3">Name</dt>
                        <dd class="col-sm-9">@Model.AnalyticalAccount.Name</dd>

                        <dt class="col-sm-3">Description</dt>
                        <dd class="col-sm-9">@Model.AnalyticalAccount.Description</dd>

                        <dt class="col-sm-3">Parent Account</dt>
                        <dd class="col-sm-9">
                            @if (Model.AnalyticalAccount.Parent != null)
                            {
                                <span class="badge bg-secondary">@Model.AnalyticalAccount.Parent.Code - @Model.AnalyticalAccount.Parent.Name</span>
                            }
                            else
                            {
                                <span class="text-muted">Root Level</span>
                            }
                        </dd>

                        <dt class="col-sm-3">Status</dt>
                        <dd class="col-sm-9">
                            @if (Model.AnalyticalAccount.IsActive)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Archived</span>
                            }
                        </dd>

                        <dt class="col-sm-3">Created Date</dt>
                        <dd class="col-sm-9">@Model.AnalyticalAccount.CreatedDate.ToString("dd MMM yyyy HH:mm")</dd>
                    </dl>

                    @if (Model.Children.Any())
                    {
                        <hr class="my-4" />
                        <h5>Child Accounts</h5>
                        <ul class="list-group">
                            @foreach (var child in Model.Children)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <div>
                                        <code>@child.Code</code> - @child.Name
                                    </div>
                                    <a asp-page="Details" asp-route-id="@child.Id" class="btn btn-sm btn-outline-primary">View</a>
                                </li>
                            }
                        </ul>
                    }

                    <hr class="my-4" />
                    <h5>Budget Summary</h5>
                    <p class="text-muted">Total Budgets: <strong>@Model.BudgetCount</strong></p>
                </div>
            </div>
        </div>
    </div>
</div>
