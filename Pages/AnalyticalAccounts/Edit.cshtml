@page
@model Budget_Accounting_System.Pages.AnalyticalAccounts.EditModel
@{
    ViewData["Title"] = "Edit Analytical Account";
}

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    <ul class="nav nav-tabs card-header-tabs">
                        <li class="nav-item">
                            <a class="nav-link disabled">New</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="#">Confirm</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link disabled">Archived</a>
                        </li>
                        <li class="nav-item ms-auto">
                            <a asp-page="Index" class="nav-link">Back</a>
                        </li>
                    </ul>
                </div>
                <div class="card-body">
                    <h4 class="card-title mb-4">Analytics Master - Edit</h4>

                    <form method="post">
                        <input type="hidden" asp-for="AnalyticalAccount.Id" />
                        <input type="hidden" asp-for="AnalyticalAccount.CreatedDate" />
                        
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="AnalyticalAccount.Name" class="form-label">Analytic Name</label>
                            <input asp-for="AnalyticalAccount.Name" class="form-control" />
                            <span asp-validation-for="AnalyticalAccount.Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="AnalyticalAccount.Code" class="form-label">Code</label>
                            <input asp-for="AnalyticalAccount.Code" class="form-control" />
                            <span asp-validation-for="AnalyticalAccount.Code" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="AnalyticalAccount.Description" class="form-label">Description</label>
                            <textarea asp-for="AnalyticalAccount.Description" class="form-control" rows="2"></textarea>
                            <span asp-validation-for="AnalyticalAccount.Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="AnalyticalAccount.ParentId" class="form-label">Parent Account</label>
                            <select asp-for="AnalyticalAccount.ParentId" class="form-select">
                                <option value="">-- No Parent (Root Level) --</option>
                                @foreach (var account in Model.ParentAccounts)
                                {
                                    <option value="@account.Id">@account.Code - @account.Name</option>
                                }
                            </select>
                        </div>

                        <div class="mb-3 form-check">
                            <input asp-for="AnalyticalAccount.IsActive" class="form-check-input" />
                            <label asp-for="AnalyticalAccount.IsActive" class="form-check-label">Active</label>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-page="Index" class="btn btn-secondary">Cancel</a>
                            <button type="submit" class="btn btn-primary">Update</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
