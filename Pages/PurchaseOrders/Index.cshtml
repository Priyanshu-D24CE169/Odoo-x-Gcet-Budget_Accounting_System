@page
@model Budget_Accounting_System.Pages.PurchaseOrders.IndexModel
@{
    ViewData["Title"] = "Purchase Orders";
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col-md-8">
            <h2>Purchase Orders</h2>
        </div>
        <div class="col-md-4 text-end">
            <a asp-page="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> New
            </a>
        </div>
    </div>

    <!-- Search and Filter -->
    <div class="row mb-3">
        <div class="col-md-4">
            <form method="get">
                <div class="input-group">
                    <input type="text" name="searchString" class="form-control" placeholder="Search PO Number or Reference..." value="@Model.SearchString" />
                    <button class="btn btn-outline-secondary" type="submit">
                        <i class="bi bi-search"></i> Search
                    </button>
                </div>
            </form>
        </div>
        <div class="col-md-3">
            <form method="get">
                <select name="filterStatus" class="form-select" onchange="this.form.submit()">
                    <option value="">All Status</option>
                    <option value="Draft" selected="@(Model.FilterStatus == "Draft")">Draft</option>
                    <option value="Confirmed" selected="@(Model.FilterStatus == "Confirmed")">Confirmed</option>
                    <option value="Cancelled" selected="@(Model.FilterStatus == "Cancelled")">Cancelled</option>
                </select>
            </form>
        </div>
        <div class="col-md-2">
            @if (!string.IsNullOrEmpty(Model.SearchString) || !string.IsNullOrEmpty(Model.FilterStatus))
            {
                <a asp-page="Index" class="btn btn-outline-warning w-100">
                    <i class="bi bi-x-circle"></i> Clear Filters
                </a>
            }
        </div>
        <div class="col-md-3 text-end">
            <div class="alert alert-info mb-0 py-2">
                <small><strong>Total:</strong> @Model.PurchaseOrders.Count PO(s)</small>
            </div>
        </div>
    </div>


    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>PO No.</th>
                            <th>PO Date</th>
                            <th>Vendor</th>
                            <th>Reference</th>
                            <th>Total Amount</th>
                            <th>Status</th>
                            <th>Bills</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var po in Model.PurchaseOrders)
                        {
                            <tr>
                                <td><strong>@po.PONumber</strong></td>
                                <td>@po.PODate.ToString("dd/MM/yyyy")</td>
                                <td>@po.Vendor.Name</td>
                                <td>@po.Reference</td>
                                <td>@po.TotalAmount.ToString("C")</td>
                                <td>
                                    @if (po.Status == POStatus.Draft)
                                    {
                                        <span class="badge bg-secondary">Draft</span>
                                    }
                                    else if (po.Status == POStatus.Confirmed)
                                    {
                                        <span class="badge bg-success">Confirmed</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Cancelled</span>
                                    }
                                </td>
                                <td>
                                    @if (po.VendorBills.Any())
                                    {
                                        <a asp-page="/VendorBills/Index" asp-route-poId="@po.Id" class="btn btn-sm btn-outline-primary">
                                            @po.VendorBills.Count Bill(s)
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">No bills</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-page="Details" asp-route-id="@po.Id" class="btn btn-sm btn-info">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        @if (po.Status == POStatus.Draft)
                                        {
                                            <a asp-page="Edit" asp-route-id="@po.Id" class="btn btn-sm btn-warning">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                        }
                                        @if (po.Status == POStatus.Confirmed)
                                        {
                                            <a asp-page="/VendorBills/CreateFromPO" asp-route-poId="@po.Id" class="btn btn-sm btn-primary" title="Create Bill">
                                                <i class="bi bi-receipt"></i>
                                            </a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (!Model.PurchaseOrders.Any())
            {
                <div class="text-center text-muted py-5">
                    <i class="bi bi-inbox display-1 text-secondary"></i>
                    @if (!string.IsNullOrEmpty(Model.SearchString) || !string.IsNullOrEmpty(Model.FilterStatus))
                    {
                        <h5 class="mt-3">No purchase orders match your filters</h5>
                        <p>Try clearing the filters or adjusting your search.</p>
                        <a asp-page="Index" class="btn btn-outline-primary">
                            <i class="bi bi-x-circle"></i> Clear All Filters
                        </a>
                    }
                    else
                    {
                        <h5 class="mt-3">No purchase orders found</h5>
                        <p>Get started by creating your first purchase order.</p>
                        <a asp-page="Create" class="btn btn-primary">
                            <i class="bi bi-plus-circle"></i> Create Purchase Order
                        </a>
                    }
                </div>
            }

        </div>
    </div>
</div>
